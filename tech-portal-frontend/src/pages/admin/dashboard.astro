  .category-badge.rehberler { background: rgba(6, 182, 212, 0.1); color: #06B6D4; }
  .category-badge.sorun-cozumleri { background: rgba(34, 197, 94, 0.1); color: #22C55E; }
  .category-badge.incelemeler { background: rgba(168, 85, 247, 0.1); color: #A855F7; }

  @media (max-width: 768px) {
    .action-buttons {
      flex-direction: column;
    }
    .action-btn {
      text-align: center;
    }
  }
</style>
