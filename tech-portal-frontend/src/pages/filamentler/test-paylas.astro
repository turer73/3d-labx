---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
---

<BaseLayout title="Filament Test Sonucu Paylaş – 3D-labX">
  <Header />

  <main class="test-page">
    <div class="container">
      <div class="page-header">
        <a href="/filamentler" class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
          Filamentlere Dön
        </a>
        <h1>Filament Test Sonucu Paylaş</h1>
        <p>Kullandığın Türk filamentlerin test sonuçlarını paylaşarak topluluğa katkıda bulun!</p>
      </div>

      <form id="testForm" class="test-form">
        <!-- Filament Seçimi -->
        <div class="form-section">
          <h2><span class="section-number">1</span> Filament Bilgileri</h2>

          <div class="form-row">
            <div class="form-group">
              <label for="brand">Marka *</label>
              <select id="brand" name="brand" required>
                <option value="">Marka Seçin</option>
                <option value="Elas 3D">Elas 3D</option>
                <option value="Filamix">Filamix</option>
                <option value="Microzey">Microzey</option>
                <option value="Beta Filament">Beta Filament</option>
                <option value="Nanelab">Nanelab</option>
                <option value="Filameon">Filameon</option>
                <option value="Valment">Valment</option>
                <option value="Revo Filament">Revo Filament</option>
                <option value="Porima">Porima</option>
                <option value="Diger">Diğer (Türk Markası)</option>
              </select>
            </div>
            <div class="form-group">
              <label for="material">Malzeme Tipi *</label>
              <select id="material" name="material" required>
                <option value="">Malzeme Seçin</option>
                <option value="PLA">PLA</option>
                <option value="PLA+">PLA+</option>
                <option value="PETG">PETG</option>
                <option value="ABS">ABS</option>
                <option value="ASA">ASA</option>
                <option value="TPU">TPU</option>
                <option value="Silk PLA">Silk PLA</option>
                <option value="Wood PLA">Wood PLA</option>
                <option value="Carbon PLA">Carbon PLA</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="color">Renk *</label>
              <select id="color" name="color" required>
                <option value="">Renk Seçin</option>
                <option value="Beyaz">Beyaz</option>
                <option value="Siyah">Siyah</option>
                <option value="Kırmızı">Kırmızı</option>
                <option value="Mavi">Mavi</option>
                <option value="Yeşil">Yeşil</option>
                <option value="Sarı">Sarı</option>
                <option value="Turuncu">Turuncu</option>
                <option value="Mor">Mor</option>
                <option value="Gri">Gri</option>
                <option value="Şeffaf">Şeffaf</option>
                <option value="Altın">Altın</option>
                <option value="Gümüş">Gümüş</option>
                <option value="Kahverengi">Kahverengi</option>
              </select>
            </div>
            <div class="form-group">
              <label for="batchNumber">Parti Numarası (Opsiyonel)</label>
              <input type="text" id="batchNumber" name="batchNumber" placeholder="örn: 2026-01-A">
            </div>
          </div>
        </div>

        <!-- Yazıcı Bilgileri -->
        <div class="form-section">
          <h2><span class="section-number">2</span> Yazıcı ve Ayarlar</h2>

          <div class="form-row">
            <div class="form-group">
              <label for="printer">3D Yazıcı Modeli *</label>
              <input type="text" id="printer" name="printer" required placeholder="örn: Ender 3 V2, Bambu Lab P1S">
            </div>
            <div class="form-group">
              <label for="nozzle">Nozül Çapı *</label>
              <select id="nozzle" name="nozzle" required>
                <option value="">Seçin</option>
                <option value="0.4" selected>0.4mm</option>
                <option value="0.2">0.2mm</option>
                <option value="0.6">0.6mm</option>
                <option value="0.8">0.8mm</option>
              </select>
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="nozzleTemp">Nozül Sıcaklığı *</label>
              <div class="input-with-unit">
                <input type="number" id="nozzleTemp" name="nozzleTemp" required min="150" max="300" placeholder="210">
                <span class="unit">°C</span>
              </div>
            </div>
            <div class="form-group">
              <label for="bedTemp">Tabla Sıcaklığı *</label>
              <div class="input-with-unit">
                <input type="number" id="bedTemp" name="bedTemp" required min="0" max="120" placeholder="60">
                <span class="unit">°C</span>
              </div>
            </div>
            <div class="form-group">
              <label for="speed">Baskı Hızı</label>
              <div class="input-with-unit">
                <input type="number" id="speed" name="speed" min="10" max="500" placeholder="50">
                <span class="unit">mm/s</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Değerlendirme -->
        <div class="form-section">
          <h2><span class="section-number">3</span> Test Değerlendirmesi</h2>

          <div class="rating-grid">
            <div class="rating-item">
              <label>Baskı Kalitesi *</label>
              <div class="star-rating" data-field="printQuality">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
              <input type="hidden" name="printQuality" id="printQuality" required>
            </div>

            <div class="rating-item">
              <label>Katman Yapışması *</label>
              <div class="star-rating" data-field="layerAdhesion">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
              <input type="hidden" name="layerAdhesion" id="layerAdhesion" required>
            </div>

            <div class="rating-item">
              <label>Stringing/İpliklenme *</label>
              <div class="star-rating" data-field="stringing">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
              <input type="hidden" name="stringing" id="stringing" required>
              <small>5 = Hiç yok, 1 = Çok fazla</small>
            </div>

            <div class="rating-item">
              <label>Warping/Bükülme *</label>
              <div class="star-rating" data-field="warping">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
              <input type="hidden" name="warping" id="warping" required>
              <small>5 = Hiç yok, 1 = Çok fazla</small>
            </div>

            <div class="rating-item">
              <label>Fiyat/Performans *</label>
              <div class="star-rating" data-field="valueForMoney">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
              <input type="hidden" name="valueForMoney" id="valueForMoney" required>
            </div>

            <div class="rating-item">
              <label>Genel Puan *</label>
              <div class="star-rating" data-field="overallRating">
                <span class="star" data-value="1">★</span>
                <span class="star" data-value="2">★</span>
                <span class="star" data-value="3">★</span>
                <span class="star" data-value="4">★</span>
                <span class="star" data-value="5">★</span>
              </div>
              <input type="hidden" name="overallRating" id="overallRating" required>
            </div>
          </div>

          <div class="form-group">
            <label for="comments">Yorumlar ve Notlar</label>
            <textarea id="comments" name="comments" rows="4" placeholder="Filament hakkında deneyimlerinizi, ipuçlarını veya dikkat edilmesi gereken noktaları yazın..."></textarea>
          </div>

          <div class="form-group">
            <label>
              <input type="checkbox" id="recommend" name="recommend">
              Bu filamenti başkalarına tavsiye ederim
            </label>
          </div>
        </div>

        <!-- Gönder -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 2L11 13M22 2l-7 20-4-9-9-4 20-7z"/>
            </svg>
            Test Sonucunu Gönder
          </button>
        </div>
      </form>

      <div id="successMessage" class="success-message" style="display: none;">
        <div class="success-icon">✓</div>
        <h2>Test Sonucun Kaydedildi!</h2>
        <p>Topluluk katkın için teşekkürler! Değerlendirmen incelendikten sonra yayınlanacak.</p>
        <a href="/filamentler" class="btn btn-secondary">Filamentlere Dön</a>
      </div>
    </div>
  </main>
</BaseLayout>

<style is:global>
  .test-page {
    padding: 120px 20px 60px;
    min-height: 100vh;
  }

  .test-page .container {
    max-width: 800px;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 40px;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 20px;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #E30A17;
  }

  .page-header h1 {
    font-size: 2rem;
    margin-bottom: 12px;
    background: linear-gradient(135deg, #E30A17, #FF6B6B);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-header p {
    color: var(--text-muted);
  }

  .test-form {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .form-section {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 20px;
    padding: 28px;
  }

  .form-section h2 {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1.25rem;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--border-soft);
  }

  .section-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, #E30A17, #FF4444);
    color: white;
    border-radius: 50%;
    font-size: 0.9rem;
    font-weight: 700;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
  }

  .form-row:last-child {
    margin-bottom: 0;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .form-group label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-main);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 12px 16px;
    border: 1px solid var(--border-soft);
    border-radius: 12px;
    background: var(--bg-main);
    color: var(--text-main);
    font-size: 0.95rem;
    transition: all 0.2s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #E30A17;
    box-shadow: 0 0 0 3px rgba(227, 10, 23, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 100px;
  }

  .input-with-unit {
    display: flex;
    align-items: center;
    gap: 0;
  }

  .input-with-unit input {
    border-radius: 12px 0 0 12px;
    border-right: none;
    flex: 1;
  }

  .input-with-unit .unit {
    padding: 12px 16px;
    background: var(--bg-main);
    border: 1px solid var(--border-soft);
    border-radius: 0 12px 12px 0;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  /* Star Rating */
  .rating-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 24px;
    margin-bottom: 24px;
  }

  .rating-item {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .rating-item label {
    font-size: 0.9rem;
    font-weight: 600;
  }

  .rating-item small {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .star-rating {
    display: flex;
    gap: 4px;
  }

  .star-rating .star {
    font-size: 1.5rem;
    color: var(--border-soft);
    cursor: pointer;
    transition: all 0.2s;
  }

  .star-rating .star:hover,
  .star-rating .star.active {
    color: #fbbf24;
    transform: scale(1.1);
  }

  .star-rating:hover .star {
    color: #fbbf24;
  }

  .star-rating:hover .star:hover ~ .star {
    color: var(--border-soft);
  }

  /* Checkbox */
  .form-group input[type="checkbox"] {
    width: 20px;
    height: 20px;
    margin-right: 10px;
    accent-color: #E30A17;
  }

  .form-group label:has(input[type="checkbox"]) {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  /* Actions */
  .form-actions {
    display: flex;
    justify-content: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    border-radius: 14px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary {
    background: linear-gradient(135deg, #E30A17, #FF4444);
    color: white;
    box-shadow: 0 4px 16px rgba(227, 10, 23, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 24px rgba(227, 10, 23, 0.4);
  }

  .btn-secondary {
    background: var(--bg-card);
    color: var(--text-main);
    border: 1px solid var(--border-soft);
  }

  .btn-secondary:hover {
    border-color: #E30A17;
    color: #E30A17;
  }

  /* Success Message */
  .success-message {
    text-align: center;
    padding: 60px 40px;
    background: var(--bg-card);
    border-radius: 20px;
    border: 1px solid rgba(16, 185, 129, 0.3);
  }

  .success-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #10B981, #34D399);
    color: white;
    font-size: 2.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
  }

  .success-message h2 {
    font-size: 1.5rem;
    margin-bottom: 12px;
    color: #10B981;
  }

  .success-message p {
    color: var(--text-muted);
    margin-bottom: 24px;
  }

  @media (max-width: 768px) {
    .test-page {
      padding: 100px 16px 40px;
    }

    .form-section {
      padding: 20px;
    }

    .rating-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    // Star rating functionality
    document.querySelectorAll('.star-rating').forEach(ratingEl => {
      const field = ratingEl.dataset.field;
      const hiddenInput = document.getElementById(field);
      const stars = ratingEl.querySelectorAll('.star');

      stars.forEach(star => {
        star.addEventListener('click', () => {
          const value = star.dataset.value;
          hiddenInput.value = value;

          // Update visual state
          stars.forEach(s => {
            s.classList.toggle('active', s.dataset.value <= value);
          });
        });
      });
    });

    // Form submission
    document.getElementById('testForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target;
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());

      // Validate all ratings filled
      const ratings = ['printQuality', 'layerAdhesion', 'stringing', 'warping', 'valueForMoney', 'overallRating'];
      for (const r of ratings) {
        if (!data[r]) {
          alert('Lütfen tüm değerlendirme puanlarını doldurun.');
          return;
        }
      }

      try {
        // For now, just show success (backend integration can be added later)
        form.style.display = 'none';
        document.getElementById('successMessage').style.display = 'block';

        // Scroll to top
        window.scrollTo({ top: 0, behavior: 'smooth' });

      } catch (error) {
        console.error('Submit error:', error);
        alert('Bir hata oluştu. Lütfen tekrar deneyin.');
      }
    });
  });
</script>
