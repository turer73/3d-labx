  <Header />

  {fetchError && (
    <main class="error-page">
      <p style="color: red;">Hata: {fetchError}</p>
      <a href="/3d-baski">‚Üê Geri d√∂n</a>
    </main>
  )}

  {!post && !fetchError && (
    <main class="error-page">
      <h1>ƒ∞√ßerik Bulunamadƒ±</h1>
      <a href="/3d-baski">‚Üê Geri d√∂n</a>
