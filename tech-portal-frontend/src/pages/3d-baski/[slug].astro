---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { marked } from "marked";

export const prerender = false;

const API_BASE = "https://tech-portal-api.turgut-d01.workers.dev";
const { slug } = Astro.params;

let post: any = null;
let relatedPosts: any[] = [];
let fetchError = "";

try {
  // Ana makaleyi √ßek
  const res = await fetch(`${API_BASE}/api/post/${slug}`);
  if (res.ok) {
    post = await res.json();
  }

  // ƒ∞lgili yazƒ±larƒ± √ßek (aynƒ± kategori)
  if (post) {
    const relatedRes = await fetch(`${API_BASE}/api/posts?category=${post.category}&limit=4`);
    if (relatedRes.ok) {
      const relatedData = await relatedRes.json();
      // API { posts: [...], pagination: {...} } yapƒ±sƒ±nda d√∂n√ºyor
      const allRelated = relatedData.posts || [];
      // Mevcut makaleyi √ßƒ±kar
      relatedPosts = allRelated.filter((p: any) => p.slug !== slug).slice(0, 3);
    }
  }
} catch (e: any) {
  fetchError = e?.message || "Fetch error";
}

const title = post?.title_tr || "ƒ∞√ßerik Bulunamadƒ±";

// ƒ∞√ßerik HTML mi yoksa Markdown mƒ± kontrol et
function formatContent(content: string): string {
  if (!content) return "";
  if (content.includes("<p>") || content.includes("<h2>") || content.includes("<div>")) {
    return content;
  }
  if (content.includes("##") || content.includes("**") || content.includes("|")) {
    return marked.parse(content) as string;
  }
  return content
    .split(/\n\n+/)
    .map(p => `<p>${p.replace(/\n/g, "<br/>")}</p>`)
    .join("");
}

// H2 ba≈ülƒ±klarƒ±nƒ± √ßƒ±kar (i√ßindekiler i√ßin)
function extractHeadings(content: string): {id: string, text: string}[] {
  const headings: {id: string, text: string}[] = [];
  const regex = /<h2[^>]*>(.*?)<\/h2>/gi;
  let match;
  while ((match = regex.exec(content)) !== null) {
    const text = match[1].replace(/<[^>]+>/g, ''); // HTML etiketlerini temizle
    const id = text.toLowerCase().replace(/[^a-z0-9ƒü√º≈üƒ±√∂√ß]/gi, '-').replace(/-+/g, '-');
    headings.push({ id, text });
  }
  return headings;
}

// Okuma s√ºresini hesapla
function calculateReadTime(content: string): number {
  const text = content.replace(/<[^>]+>/g, '');
  const words = text.split(/\s+/).length;
  return Math.ceil(words / 200); // 200 kelime/dakika
}

const formattedContent = post ? formatContent(post.content_tr) : "";
const headings = extractHeadings(formattedContent);
const readTime = post ? calculateReadTime(post.content_tr || "") : 0;

// Tarihi formatla
const formattedDate = post?.created_at
  ? new Date(post.created_at).toLocaleDateString("tr-TR", { day: "numeric", month: "long", year: "numeric" })
  : "";

// Kategori bilgileri
const categoryInfo: Record<string, {name: string, color: string, icon: string}> = {
  "3d-baski": { name: "3D Baskƒ±", color: "#22c55e", icon: "üñ®Ô∏è" },
  "rehberler": { name: "Rehber", color: "#06b6d4", icon: "üìö" },
  "incelemeler": { name: "ƒ∞nceleme", color: "#f59e0b", icon: "‚≠ê" },
  "sorun-cozumleri": { name: "Sorun √á√∂z√ºm√º", color: "#ef4444", icon: "üîß" },
};

const catInfo = categoryInfo[post?.category] || { name: "Makale", color: "#3b82f6", icon: "üìÑ" };
