<script is:inline define:vars={{ useCases }}>
  // Use Case Selection
  const useCaseCards = document.querySelectorAll('.usecase-card');
  const recPanel = document.getElementById('recommendationPanel');
  const recMaterial = document.getElementById('recMaterial');
  const recReason = document.getElementById('recReason');
  const recAlternatives = document.getElementById('recAlternatives');

  // Build recommendations from server-side data
  const recommendations = {};
  useCases.forEach(uc => {
    recommendations[uc.id] = {
      material: uc.recommend,
      reason: uc.reason,
      alternatives: uc.recommend === 'PLA' ? 'PETG' : uc.recommend === 'PETG' ? 'ABS, PLA' : uc.recommend === 'ASA' ? 'PETG, ABS' : uc.recommend === 'TPU' ? 'TPE, Flex' : uc.recommend === 'Nylon' ? 'PETG, CF-Nylon' : 'PLA'
    };
  });

  useCaseCards.forEach(card => {
    card.addEventListener('click', () => {
      useCaseCards.forEach(c => c.classList.remove('active'));
      card.classList.add('active');

      const usecase = card.getAttribute('data-usecase') || 'beginner';
      const rec = recommendations[usecase];

      if (rec && recMaterial && recReason && recAlternatives && recPanel) {
        recMaterial.textContent = rec.material;
        recReason.textContent = rec.reason;
        recAlternatives.textContent = rec.alternatives;
        recPanel.classList.add('visible');
      }
    });
  });

  // Filter Buttons
  const filterBtns = document.querySelectorAll('.filter-btn');
  const materialCards = document.querySelectorAll('.material-card');

  const filterMap = {
    all: [],
    beginner: ['pla', 'petg'],
    durable: ['petg', 'abs', 'nylon'],
    flexible: ['tpu'],
    outdoor: ['asa', 'abs']
  };

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const filter = btn.getAttribute('data-filter') || 'all';
      const allowed = filterMap[filter];

      materialCards.forEach(card => {
        const type = card.getAttribute('data-type');
        if (filter === 'all' || (type && allowed.includes(type))) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });

  // Price Type Tabs
  const priceTabs = document.querySelectorAll('.price-tab');
  const priceCards = document.querySelectorAll('.price-card');

  priceTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      priceTabs.forEach(t => t.classList.remove('active'));
      tab.classList.add('active');

      const type = tab.getAttribute('data-price-type');
      priceCards.forEach(card => {
        const cardType = card.getAttribute('data-type');
        if (type === cardType) {
          card.style.display = 'block';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>
