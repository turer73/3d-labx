    outdoor: { material: "ASA", reason: "UV Ä±ÅŸÄ±nlarÄ±na ve hava koÅŸullarÄ±na karÅŸÄ± en dayanÄ±klÄ± filament.", alternatives: "PETG (daha kolay baskÄ±)" },
