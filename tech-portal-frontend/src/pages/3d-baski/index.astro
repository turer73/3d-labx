---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { getApiBase } from "../../lib/api";

export const prerender = false;

type Post = {
  id: number;
  title_tr: string;
  summary_tr: string;
  slug: string;
  category: string;
  image_url?: string;
  is_featured: number;
  created_at?: string;
};

type Pagination = {
  page: number;
  limit: number;
  total: number;
  totalPages: number;
  hasNext: boolean;
  hasPrev: boolean;
};

type ApiResponse = {
  posts: Post[];
  pagination: Pagination;
};

const API_BASE = getApiBase(Astro.request);

const url = new URL(Astro.request.url);
const currentPage = Math.max(1, parseInt(url.searchParams.get("page") || "1", 10));
const POSTS_PER_PAGE = 12;

let posts: Post[] = [];
let pagination: Pagination | null = null;
let error: string | null = null;

try {
  const res = await fetch(
    `${API_BASE}/api/posts?category=3d-baski&page=${currentPage}&limit=${POSTS_PER_PAGE}`,
    { headers: { "Accept": "application/json" } }
  );

  if (!res.ok) {
    throw new Error(`API hatası: ${res.status}`);
  }

  const data: ApiResponse = await res.json();
  posts = data.posts;
  pagination = data.pagination;
} catch (e) {
  error = e instanceof Error ? e.message : "Bilinmeyen hata";
  console.error("3D Baskı sayfası hatası:", error);
}

const title = currentPage > 1
  ? `3D Baskı Haberleri - Sayfa ${currentPage} – 3D-labX`
  : "3D Baskı Haberleri – 3D-labX";

const description = posts.length > 0
  ? `En güncel 3D baskı haberleri: ${posts.slice(0, 3).map((p) => p.title_tr).join(", ")}`
  : "3D baskı dünyasından en güncel haberler ve analizler.";

// İlk 2 post hero için, geri kalanı grid için
const heroPosts = posts.slice(0, 2);
const gridPosts = posts.slice(2);
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="category-page">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <div class="page-title-group">
          <div class="title-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>
            <span>3D Baskı</span>
          </div>
          <h1>3D Baskı Haberleri</h1>
          <p class="page-desc">En güncel 3D baskı haberleri, teknoloji gelişmeleri ve sektör analizleri</p>
        </div>
        {pagination && (
          <div class="post-stats">
            <span class="post-count">{pagination.total} içerik</span>
          </div>
        )}
      </div>

      {error && (
        <div class="message message-error">
          <p><strong>İçerikler yüklenirken bir hata oluştu.</strong></p>
          <p class="text-sm">{error}</p>
        </div>
      )}

      {!error && posts.length === 0 && (
        <div class="empty-state">
          <div class="empty-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/></svg>
          </div>
          <h2>Henüz İçerik Yok</h2>
          <p>Bu kategoride henüz içerik bulunmuyor.</p>
          <a href="/" class="btn btn-primary">Ana Sayfaya Dön</a>
        </div>
      )}

      {posts.length > 0 && (
        <>
          <!-- Hero Bento Grid - İlk 2 post -->
          {heroPosts.length > 0 && (
            <div class="hero-bento">
              {heroPosts[0] && (
                <a href={`/3d-baski/${heroPosts[0].slug}`} class="hero-card hero-main">
                  <div class="hero-image">
                    {heroPosts[0].image_url && <img src={heroPosts[0].image_url} alt={heroPosts[0].title_tr} />}
                    <div class="hero-overlay"></div>
                  </div>
                  <div class="hero-content">
                    <span class="hero-badge">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                      Güncel
                    </span>
                    <h2>{heroPosts[0].title_tr}</h2>
                    <p>{heroPosts[0].summary_tr}</p>
                    {heroPosts[0].created_at && (
                      <time class="hero-date">
                        {new Date(heroPosts[0].created_at).toLocaleDateString("tr-TR", {
                          year: "numeric", month: "long", day: "numeric"
                        })}
                      </time>
                    )}
                  </div>
                </a>
              )}
              {heroPosts[1] && (
                <a href={`/3d-baski/${heroPosts[1].slug}`} class="hero-card hero-side">
                  <div class="hero-image">
                    {heroPosts[1].image_url && <img src={heroPosts[1].image_url} alt={heroPosts[1].title_tr} />}
                    <div class="hero-overlay"></div>
                  </div>
                  <div class="hero-content">
                    <h2>{heroPosts[1].title_tr}</h2>
                    <p>{heroPosts[1].summary_tr}</p>
                    {heroPosts[1].created_at && (
                      <time class="hero-date">
                        {new Date(heroPosts[1].created_at).toLocaleDateString("tr-TR", {
                          year: "numeric", month: "long", day: "numeric"
                        })}
                      </time>
                    )}
                  </div>
                </a>
              )}
            </div>
          )}

          <!-- Posts Bento Grid -->
          <div class="bento-grid" id="postsGrid">
            {gridPosts.map((post, index) => (
              <a 
                href={`/3d-baski/${post.slug}`} 
                class={`bento-card ${post.is_featured ? 'featured' : ''} ${index === 0 ? 'bento-wide' : ''}`}
                data-post-id={post.id}
              >
                {post.image_url && (
                  <div class="bento-image">
                    <img src={post.image_url} alt={post.title_tr} loading="lazy" />
                  </div>
                )}
                <div class="bento-content">
                  {post.is_featured === 1 && (
                    <span class="bento-badge">Öne Çıkan</span>
                  )}
                  <h3>{post.title_tr}</h3>
                  <p>{post.summary_tr}</p>
                  {post.created_at && (
                    <time class="bento-date" datetime={post.created_at}>
                      {new Date(post.created_at).toLocaleDateString("tr-TR", {
                        year: "numeric", month: "short", day: "numeric"
                      })}
                    </time>
                  )}
                </div>
              </a>
            ))}
          </div>

          <!-- Infinite Scroll -->
          {pagination && pagination.totalPages > 1 && (
            <div class="infinite-scroll-container" id="infiniteScrollContainer">
              <div class="load-more-wrapper" id="loadMoreWrapper">
                <button class="load-more-btn" id="loadMoreBtn">
                  <span class="btn-text">Daha Fazla Göster</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m6 9 6 6 6-6"/></svg>
                </button>
                <div class="scroll-progress" id="scrollProgress">
                  <span id="loadedCount">{posts.length}</span> / <span id="totalCount">{pagination.total}</span> içerik gösteriliyor
                </div>
              </div>
              <div class="loading-more hidden" id="loadingMore">
                <div class="spinner"></div>
                <span>Yükleniyor...</span>
              </div>
              <div class="all-loaded hidden" id="allLoaded">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                <span>Tüm içerikler yüklendi</span>
              </div>
            </div>
          )}
        </>
      )}

      <!-- Data for JavaScript -->
      <script define:vars={{ initialPosts: posts, initialPagination: pagination }}>
        window.__INITIAL_POSTS__ = initialPosts;
        window.__INITIAL_PAGINATION__ = initialPagination;
      </script>
    </div>
  </main>
</BaseLayout>

<style>
  .category-page {
    padding-top: 140px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Page Header */
  .page-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 32px;
    flex-wrap: wrap;
    gap: 16px;
  }

  .page-title-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .title-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.15), rgba(234, 88, 12, 0.1));
    border: 1px solid rgba(249, 115, 22, 0.3);
    border-radius: 20px;
    color: #F97316;
    font-size: 0.8rem;
    font-weight: 600;
    width: fit-content;
  }

  .page-header h1 {
    margin: 0;
    font-size: 2rem;
    background: linear-gradient(135deg, var(--text-main) 0%, var(--text-muted) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-desc {
    color: var(--text-muted);
    font-size: 1rem;
    margin: 0;
    max-width: 500px;
  }

  .post-stats {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .post-count {
    padding: 8px 16px;
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 20px;
    color: var(--text-muted);
    font-size: 0.85rem;
    font-weight: 500;
  }

  /* Hero Bento */
  .hero-bento {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 16px;
    margin-bottom: 24px;
  }

  .hero-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .hero-main {
    min-height: 400px;
  }

  .hero-side {
    min-height: 400px;
  }

  .hero-image {
    position: absolute;
    inset: 0;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .hero-card:hover .hero-image img {
    transform: scale(1.05);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.1) 100%);
  }

  .hero-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24px;
    z-index: 1;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    background: linear-gradient(135deg, #F97316, #EA580C);
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
    border-radius: 12px;
    margin-bottom: 12px;
  }

  .hero-content h2 {
    margin: 0 0 8px;
    font-size: 1.4rem;
    color: white;
    line-height: 1.3;
  }

  .hero-main .hero-content h2 {
    font-size: 1.8rem;
  }

  .hero-content p {
    margin: 0;
    font-size: 0.9rem;
    color: rgba(255,255,255,0.8);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .hero-date {
    display: block;
    margin-top: 12px;
    font-size: 0.75rem;
    color: rgba(255,255,255,0.6);
  }

  /* Bento Grid */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }

  .bento-card {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .bento-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    border-color: rgba(249, 115, 22, 0.4);
  }

  .bento-card.featured {
    border-color: #F97316;
    border-width: 2px;
  }

  .bento-card.bento-wide {
    grid-column: span 2;
  }

  .bento-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .bento-wide .bento-image {
    aspect-ratio: 21/9;
  }

  .bento-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .bento-card:hover .bento-image img {
    transform: scale(1.05);
  }

  .bento-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .bento-badge {
    display: inline-block;
    width: fit-content;
    padding: 3px 8px;
    background: linear-gradient(135deg, #F97316, #EA580C);
    color: white;
    font-size: 0.65rem;
    font-weight: 600;
    border-radius: 6px;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .bento-content h3 {
    margin: 0 0 8px;
    font-size: 1rem;
    color: var(--text-main);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .bento-wide .bento-content h3 {
    font-size: 1.15rem;
  }

  .bento-content p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .bento-date {
    display: block;
    margin-top: 12px;
    font-size: 0.75rem;
    color: var(--text-light);
  }

  /* Infinite Scroll */
  .infinite-scroll-container {
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .load-more-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .load-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 32px;
    background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
    color: white;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(249, 115, 22, 0.3);
  }

  .load-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(249, 115, 22, 0.4);
  }

  .load-more-btn:active {
    transform: translateY(0);
  }

  .load-more-btn svg {
    transition: transform 0.3s ease;
  }

  .load-more-btn:hover svg {
    transform: translateY(3px);
  }

  .scroll-progress {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .loading-more {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 20px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .spinner {
    width: 24px;
    height: 24px;
    border: 3px solid var(--border-soft);
    border-top-color: #F97316;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .all-loaded {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 16px 24px;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 50px;
    color: #22C55E;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .hidden {
    display: none !important;
  }

  .bento-card.new-post {
    animation: fadeInUp 0.5s ease forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 60px 20px;
  }

  .empty-icon {
    color: var(--text-light);
    margin-bottom: 16px;
    opacity: 0.5;
  }

  .empty-state h2 {
    margin-bottom: 8px;
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: 24px;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero-bento {
      grid-template-columns: 1fr;
    }

    .hero-main, .hero-side {
      min-height: 280px;
    }

    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .bento-card.bento-wide {
      grid-column: span 2;
    }
  }

  @media (max-width: 640px) {
    .category-page {
      padding-top: 120px;
    }

    .page-header {
      flex-direction: column;
    }

    .page-header h1 {
      font-size: 1.6rem;
    }

    .hero-main, .hero-side {
      min-height: 240px;
    }

    .hero-main .hero-content h2 {
      font-size: 1.3rem;
    }

    .bento-grid {
      grid-template-columns: 1fr;
    }

    .bento-card.bento-wide {
      grid-column: span 1;
    }

    .load-more-btn {
      padding: 12px 24px;
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

  (function initInfiniteScroll() {
    const postsGrid = document.getElementById('postsGrid');
    const loadMoreBtn = document.getElementById('loadMoreBtn');
    const loadMoreWrapper = document.getElementById('loadMoreWrapper');
    const loadingMore = document.getElementById('loadingMore');
    const allLoaded = document.getElementById('allLoaded');
    const loadedCountEl = document.getElementById('loadedCount');
    const totalCountEl = document.getElementById('totalCount');

    if (!postsGrid || !loadMoreBtn) return;

    const initialPagination = (window as any).__INITIAL_PAGINATION__;
    if (!initialPagination) return;

    let currentPage = initialPagination.page || 1;
    let totalPages = initialPagination.totalPages || 1;
    let totalPosts = initialPagination.total || 0;
    let isLoading = false;

    function updateUI() {
      const heroCards = document.querySelectorAll('.hero-card').length;
      const gridCards = postsGrid.querySelectorAll('.bento-card').length;
      const currentLoaded = heroCards + gridCards;
      
      if (loadedCountEl) loadedCountEl.textContent = currentLoaded.toString();
      if (totalCountEl) totalCountEl.textContent = totalPosts.toString();

      if (currentPage >= totalPages) {
        loadMoreWrapper?.classList.add('hidden');
        allLoaded?.classList.remove('hidden');
      } else {
        loadMoreWrapper?.classList.remove('hidden');
        allLoaded?.classList.add('hidden');
      }
    }

    async function loadMorePosts() {
      if (isLoading || currentPage >= totalPages) return;

      isLoading = true;
      loadMoreBtn?.classList.add('hidden');
      loadingMore?.classList.remove('hidden');

      try {
        const nextPage = currentPage + 1;
        const res = await fetch(`${API_URL}/api/posts?category=3d-baski&page=${nextPage}&limit=12`);
        const data = await res.json();

        if (data.posts && data.posts.length > 0) {
          data.posts.forEach((post: any, index: number) => {
            const card = createBentoCard(post, index === 0 && currentPage === 1);
            card.style.animationDelay = `${index * 0.08}s`;
            postsGrid.appendChild(card);
          });

          currentPage = nextPage;
          updateUI();
        }
      } catch (err) {
        console.error('Load more error:', err);
      } finally {
        isLoading = false;
        loadingMore?.classList.add('hidden');
        if (currentPage < totalPages) {
          loadMoreBtn?.classList.remove('hidden');
        }
      }
    }

    function createBentoCard(post: any, isWide: boolean = false): HTMLElement {
      const card = document.createElement('a');
      card.href = `/3d-baski/${post.slug}`;
      card.className = `bento-card new-post ${post.is_featured ? 'featured' : ''} ${isWide ? 'bento-wide' : ''}`;
      card.dataset.postId = post.id;

      const dateFormatted = post.created_at
        ? new Date(post.created_at).toLocaleDateString('tr-TR', {
            year: 'numeric', month: 'short', day: 'numeric'
          })
        : '';

      card.innerHTML = `
        ${post.image_url ? `
          <div class="bento-image">
            <img src="${post.image_url}" alt="${post.title_tr}" loading="lazy" />
          </div>
        ` : ''}
        <div class="bento-content">
          ${post.is_featured === 1 ? '<span class="bento-badge">Öne Çıkan</span>' : ''}
          <h3>${post.title_tr}</h3>
          <p>${post.summary_tr}</p>
          ${dateFormatted ? `<time class="bento-date" datetime="${post.created_at}">${dateFormatted}</time>` : ''}
        </div>
      `;

      return card;
    }

    loadMoreBtn.addEventListener('click', loadMorePosts);

    let scrollTimeout: number;
    function handleScroll() {
      clearTimeout(scrollTimeout);
      scrollTimeout = window.setTimeout(() => {
        const scrollPosition = window.innerHeight + window.scrollY;
        const threshold = document.body.offsetHeight - 600;

        if (scrollPosition >= threshold && !isLoading && currentPage < totalPages) {
          loadMorePosts();
        }
      }, 100);
    }

    window.addEventListener('scroll', handleScroll, { passive: true });
    updateUI();

    document.addEventListener('astro:before-swap', () => {
      window.removeEventListener('scroll', handleScroll);
    });
  })();
</script>
