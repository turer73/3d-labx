---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
---

<BaseLayout title="Sayfa Bulunamadı – 3D-labX" description="Aradığınız sayfa bulunamadı." noIndex={true}>
  <Header />

  <main class="error-page">
    <div class="error-container">
      <!-- Animated 3D Printer -->
      <div class="printer-animation">
        <div class="printer-body">
          <div class="printer-top">
            <div class="led-light"></div>
          </div>
          <div class="printer-screen">
            <span class="error-code">404</span>
          </div>
          <div class="printer-base">
            <div class="print-bed"></div>
            <div class="failed-print">
              <div class="spaghetti"></div>
              <div class="spaghetti"></div>
              <div class="spaghetti"></div>
            </div>
          </div>
        </div>
      </div>

      <div class="error-content">
        <h1>Baskı Başarısız!</h1>
        <h2>Aradığınız sayfa bulunamadı</h2>
        <p>Sanki ilk katman yapışmamış gibi... Bu sayfa mevcut değil veya taşınmış olabilir.</p>

        <div class="error-suggestions">
          <h3>Ne yapabilirsiniz?</h3>
          <ul>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
              <a href="/">Ana Sayfaya Dön</a>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
              <a href="/search">Arama Yap</a>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
              <a href="/sorun-cozumleri">Sorun Çözümleri</a>
            </li>
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
              <a href="/topluluk/forum">Forum</a>
            </li>
          </ul>
        </div>

        <div class="actions">
          <a href="/" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/></svg>
            Ana Sayfaya Dön
          </a>
          <button onclick="history.back()" class="btn btn-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m15 18-6-6 6-6"/></svg>
            Geri Git
          </button>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .error-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 140px 20px 60px;
    background: linear-gradient(135deg, rgba(239, 68, 68, 0.05) 0%, rgba(168, 85, 247, 0.05) 100%);
  }

  .error-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    max-width: 1000px;
    align-items: center;
  }

  /* 3D Printer Animation */
  .printer-animation {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .printer-body {
    position: relative;
    width: 200px;
    height: 260px;
  }

  .printer-top {
    position: absolute;
    top: 0;
    left: 20px;
    right: 20px;
    height: 40px;
    background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
    border-radius: 8px 8px 0 0;
    border: 2px solid #4b5563;
  }

  .led-light {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    background: #ef4444;
    border-radius: 50%;
    box-shadow: 0 0 10px #ef4444;
    animation: blink 1s ease-in-out infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; box-shadow: 0 0 15px #ef4444; }
    50% { opacity: 0.3; box-shadow: 0 0 5px #ef4444; }
  }

  .printer-screen {
    position: absolute;
    top: 50px;
    left: 0;
    right: 0;
    height: 80px;
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    border: 3px solid #374151;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: inset 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  .error-code {
    font-size: 2.5rem;
    font-weight: 900;
    color: #ef4444;
    text-shadow: 0 0 20px rgba(239, 68, 68, 0.5);
    animation: glitch 2s ease-in-out infinite;
  }

  @keyframes glitch {
    0%, 90%, 100% { transform: translateX(0); }
    92% { transform: translateX(-3px); }
    94% { transform: translateX(3px); }
    96% { transform: translateX(-2px); }
    98% { transform: translateX(2px); }
  }

  .printer-base {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120px;
    background: linear-gradient(135deg, #374151 0%, #1f2937 100%);
    border: 3px solid #4b5563;
    border-radius: 8px;
  }

  .print-bed {
    position: absolute;
    bottom: 30px;
    left: 20px;
    right: 20px;
    height: 8px;
    background: linear-gradient(90deg, #f97316, #ef4444);
    border-radius: 2px;
    box-shadow: 0 0 15px rgba(249, 115, 22, 0.4);
  }

  .failed-print {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
  }

  .spaghetti {
    width: 4px;
    height: 50px;
    background: linear-gradient(180deg, #f97316 0%, #ea580c 100%);
    border-radius: 2px;
    transform-origin: bottom;
    animation: wiggle 1.5s ease-in-out infinite;
  }

  .spaghetti:nth-child(1) {
    animation-delay: 0s;
    transform: rotate(-15deg);
  }

  .spaghetti:nth-child(2) {
    animation-delay: 0.2s;
    height: 60px;
  }

  .spaghetti:nth-child(3) {
    animation-delay: 0.4s;
    transform: rotate(15deg);
  }

  @keyframes wiggle {
    0%, 100% { transform: rotate(var(--rotate, 0deg)) scaleY(1); }
    25% { transform: rotate(calc(var(--rotate, 0deg) + 5deg)) scaleY(1.05); }
    75% { transform: rotate(calc(var(--rotate, 0deg) - 5deg)) scaleY(0.95); }
  }

  /* Content */
  .error-content {
    text-align: left;
  }

  .error-content h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: #ef4444;
    margin: 0 0 8px;
  }

  .error-content h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-main);
    margin: 0 0 16px;
  }

  .error-content > p {
    color: var(--text-muted);
    font-size: 1.05rem;
    line-height: 1.6;
    margin: 0 0 32px;
  }

  .error-suggestions {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
    padding: 20px 24px;
    margin-bottom: 32px;
  }

  .error-suggestions h3 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-muted);
    margin: 0 0 16px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .error-suggestions ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .error-suggestions li {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .error-suggestions li svg {
    color: var(--accent);
    flex-shrink: 0;
  }

  .error-suggestions li a {
    color: var(--text-main);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }

  .error-suggestions li a:hover {
    color: var(--accent);
  }

  .actions {
    display: flex;
    gap: 16px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 24px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    cursor: pointer;
    border: none;
    transition: all 0.2s;
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--accent) 0%, #1d4ed8 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(37, 99, 235, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(37, 99, 235, 0.4);
  }

  .btn-secondary {
    background: var(--bg-card);
    color: var(--text-main);
    border: 2px solid var(--border-soft);
  }

  .btn-secondary:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .error-container {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .printer-animation {
      order: -1;
    }

    .printer-body {
      transform: scale(0.8);
    }

    .error-content {
      text-align: center;
    }

    .error-content h1 {
      font-size: 2rem;
    }

    .error-content h2 {
      font-size: 1.25rem;
    }

    .error-suggestions ul {
      grid-template-columns: 1fr;
    }

    .error-suggestions li {
      justify-content: center;
    }

    .actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
