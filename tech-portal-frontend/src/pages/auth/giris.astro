---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";

const title = "Giriş Yap – 3D-labX";
const description = "3D-labX hesabınıza giriş yapın.";
---

<BaseLayout title={title} description={description} noIndex={true}>
  <Header />

  <main class="auth-page">
    <div class="auth-container">
      <div class="auth-card">
        <div class="auth-header">
          <h1>Giriş Yap</h1>
          <p>Hesabınıza giriş yapın</p>
        </div>

        <form id="loginForm" class="auth-form">
          <div class="form-group">
            <label for="email">E-posta veya Kullanıcı Adı</label>
            <input
              type="text"
              id="email"
              name="email"
              required
              placeholder="ornek@email.com"
              autocomplete="username"
            />
          </div>

          <div class="form-group">
            <label for="password">Şifre</label>
            <div class="password-input">
              <input
                type="password"
                id="password"
                name="password"
                required
                placeholder="Şifrenizi girin"
                autocomplete="current-password"
              />
              <button type="button" class="toggle-password" aria-label="Şifreyi göster">
                <svg class="icon-eye" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>
                <svg class="icon-eye-off" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none"><path d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/><path d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/><path d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/><line x1="2" x2="22" y1="2" y2="22"/></svg>
              </button>
            </div>
            <a href="/auth/sifremi-unuttum" class="forgot-link">Şifremi unuttum</a>
          </div>

          <div class="form-message" id="formMessage"></div>

          <button type="submit" class="btn btn-primary btn-full" id="submitBtn">
            <span class="btn-text">Giriş Yap</span>
            <span class="btn-loading" style="display:none">
              <svg class="spinner" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="32" stroke-linecap="round"/></svg>
            </span>
          </button>
        </form>

        <div class="auth-footer">
          <p>Hesabınız yok mu? <a href="/auth/kayit">Kayıt Ol</a></p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script>
  const form = document.getElementById('loginForm') as HTMLFormElement;
  const message = document.getElementById('formMessage')!;
  const submitBtn = document.getElementById('submitBtn')!;
  const btnText = submitBtn.querySelector('.btn-text')!;
  const btnLoading = submitBtn.querySelector('.btn-loading')!;

  // Toggle password visibility
  document.querySelectorAll('.toggle-password').forEach(btn => {
    btn.addEventListener('click', () => {
      const input = btn.previousElementSibling as HTMLInputElement;
      const eyeIcon = btn.querySelector('.icon-eye') as HTMLElement;
      const eyeOffIcon = btn.querySelector('.icon-eye-off') as HTMLElement;

      if (input.type === 'password') {
        input.type = 'text';
        eyeIcon.style.display = 'none';
        eyeOffIcon.style.display = 'block';
      } else {
        input.type = 'password';
        eyeIcon.style.display = 'block';
        eyeOffIcon.style.display = 'none';
      }
    });
  });

  // Check if already logged in
  const existingToken = localStorage.getItem('authToken');
  if (existingToken) {
    // Verify token
    fetch('https://tech-portal-api.turgut-d01.workers.dev/api/auth/me', {
      headers: { 'Authorization': `Bearer ${existingToken}` }
    }).then(async res => {
      if (res.ok) {
        const userData = await res.json();
        // Redirect parametresini kontrol et
        let redirect = new URLSearchParams(window.location.search).get('redirect') || '/';
        const trustedDomains = ['3d-labx.com', 'magaza.3d-labx.com', 'dergi.3d-labx.com'];
        const isRelativePath = redirect.startsWith('/') && !redirect.startsWith('//');
        let isTrustedDomain = false;
        try {
          const redirectUrl = new URL(redirect);
          isTrustedDomain = trustedDomains.some(domain =>
            redirectUrl.hostname === domain || redirectUrl.hostname.endsWith('.' + domain)
          );
        } catch {}
        if (!isRelativePath && !isTrustedDomain) redirect = '/';

        // Eğer farklı bir domaine yönlendiriliyorsa token'ı URL ile gönder
        if (isTrustedDomain && redirect.startsWith('http')) {
          const redirectUrl = new URL(redirect);
          redirectUrl.searchParams.set('token', existingToken);
          // API artık doğrudan user bilgisi döndürüyor (user objesi içinde değil)
          redirectUrl.searchParams.set('user', btoa(JSON.stringify(userData)));
          window.location.href = redirectUrl.toString();
        } else {
          window.location.href = redirect;
        }
      } else {
        // Token geçersizse localStorage'ı temizle
        localStorage.removeItem('authToken');
        localStorage.removeItem('authUser');
      }
    }).catch(() => {
      // Hata durumunda localStorage'ı temizle
      localStorage.removeItem('authToken');
      localStorage.removeItem('authUser');
    });
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;

    // Loading state
    btnText.style.display = 'none';
    (btnLoading as HTMLElement).style.display = 'flex';
    (submitBtn as HTMLButtonElement).disabled = true;
    message.className = 'form-message';
    message.textContent = '';

    try {
      const res = await fetch('https://tech-portal-api.turgut-d01.workers.dev/api/auth/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, password })
      });

      const data = await res.json();

      if (res.ok) {
        // Token'ı kaydet
        localStorage.setItem('authToken', data.token);
        localStorage.setItem('authUser', JSON.stringify(data.user));

        message.className = 'form-message success';
        message.textContent = 'Giriş başarılı! Yönlendiriliyorsunuz...';

        // Redirect - allow relative paths and trusted domains
        let redirect = new URLSearchParams(window.location.search).get('redirect') || '/';

        // Güvenilir domainler (3d-labx.com alt domainleri)
        const trustedDomains = ['3d-labx.com', 'magaza.3d-labx.com', 'dergi.3d-labx.com'];

        // URL kontrolü
        const isRelativePath = redirect.startsWith('/') && !redirect.startsWith('//');
        let isTrustedDomain = false;

        try {
          const redirectUrl = new URL(redirect);
          isTrustedDomain = trustedDomains.some(domain =>
            redirectUrl.hostname === domain || redirectUrl.hostname.endsWith('.' + domain)
          );
        } catch {
          // URL parse edilemezse, relative path değilse reddet
        }

        if (!isRelativePath && !isTrustedDomain) {
          redirect = '/';
        }

        // Eğer farklı bir domaine yönlendiriliyorsa token'ı URL ile gönder
        setTimeout(() => {
          if (isTrustedDomain && redirect.startsWith('http')) {
            const redirectUrl = new URL(redirect);
            redirectUrl.searchParams.set('token', data.token);
            redirectUrl.searchParams.set('user', btoa(JSON.stringify(data.user)));
            window.location.href = redirectUrl.toString();
          } else {
            window.location.href = redirect;
          }
        }, 1000);
      } else {
        message.className = 'form-message error';
        message.textContent = data.error || 'Giriş başarısız';

        // E-posta doğrulanmamışsa link göster
        if (data.code === 'EMAIL_NOT_VERIFIED') {
          message.innerHTML += `<br><a href="/auth/dogrulama-gonder?email=${encodeURIComponent(email)}">Doğrulama e-postasını tekrar gönder</a>`;
        }
      }
    } catch (err) {
      message.className = 'form-message error';
      message.textContent = 'Bağlantı hatası. Lütfen tekrar deneyin.';
    } finally {
      btnText.style.display = 'inline';
      (btnLoading as HTMLElement).style.display = 'none';
      (submitBtn as HTMLButtonElement).disabled = false;
    }
  });
</script>

<style>
  .auth-page {
    padding-top: 136px;
    padding-bottom: 64px;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .auth-container {
    width: 100%;
    max-width: 440px;
    padding: 0 var(--spacing-lg);
  }

  .auth-card {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
  }

  .auth-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .auth-header h1 {
    font-size: 1.75rem;
    margin-bottom: var(--spacing-xs);
  }

  .auth-header p {
    color: var(--text-muted);
  }

  .auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-group label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-main);
  }

  .form-group input[type="text"],
  .form-group input[type="email"],
  .form-group input[type="password"] {
    padding: 12px 14px;
    background: var(--bg-main);
    border: 1px solid var(--border-soft);
    border-radius: var(--radius-md);
    color: var(--text-main);
    font-size: 1rem;
    transition: border-color var(--transition-fast);
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--accent);
  }

  .password-input {
    position: relative;
    display: flex;
    align-items: center;
  }

  .password-input input {
    width: 100%;
    padding-right: 44px;
  }

  .toggle-password {
    position: absolute;
    right: 12px;
    background: none;
    border: none;
    color: var(--text-muted);
    cursor: pointer;
    padding: 4px;
  }

  .toggle-password:hover {
    color: var(--text-main);
  }

  .forgot-link {
    font-size: 0.85rem;
    color: var(--accent);
    text-decoration: none;
    align-self: flex-end;
  }

  .forgot-link:hover {
    text-decoration: underline;
  }

  .form-message {
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    font-size: 0.9rem;
    display: none;
  }

  .form-message:not(:empty) {
    display: block;
  }

  .form-message.error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
  }

  .form-message.success {
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    color: #22c55e;
  }

  .form-message a {
    color: inherit;
    text-decoration: underline;
  }

  .btn-full {
    width: 100%;
    justify-content: center;
    margin-top: var(--spacing-sm);
  }

  .btn-loading {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .spinner {
    width: 20px;
    height: 20px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .auth-footer {
    text-align: center;
    margin-top: var(--spacing-xl);
    padding-top: var(--spacing-lg);
    border-top: 1px solid var(--border-soft);
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .auth-footer a {
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
  }

  .auth-footer a:hover {
    text-decoration: underline;
  }

  @media (max-width: 480px) {
    .auth-card {
      padding: var(--spacing-lg);
    }
  }
</style>
