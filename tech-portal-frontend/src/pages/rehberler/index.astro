    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--card-color, #EAB308);
  }

  .filament-category-count {
    font-size: 0.65rem;
    color: var(--text-light);
    background: var(--bg-card);
    padding: 2px 6px;
    border-radius: 8px;
  }

