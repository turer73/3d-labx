---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { getApiBase } from "../../lib/api";

type Post = {
  id: number;
  title_tr: string;
  summary_tr: string;
  slug: string;
  category: string;
  image_url?: string;
  is_featured: number;
  created_at?: string;
};

type Pagination = {
  page: number;
  limit: number;
  total: number;
  totalPages: number;
  hasNext: boolean;
  hasPrev: boolean;
};

type ApiResponse = {
  posts: Post[];
  pagination: Pagination;
};

export const prerender = false;

const API_BASE = getApiBase(Astro.request);

const url = new URL(Astro.request.url);
const currentPage = Math.max(1, parseInt(url.searchParams.get("page") || "1", 10));
const POSTS_PER_PAGE = 12;

let posts: Post[] = [];
let pagination: Pagination | null = null;
let error: string | null = null;

try {
  const res = await fetch(
    `${API_BASE}/api/posts?category=rehberler&page=${currentPage}&limit=${POSTS_PER_PAGE}`,
    { headers: { "Accept": "application/json" } }
  );

  if (!res.ok) {
    throw new Error(`API hatasƒ±: ${res.status}`);
  }

  const data: ApiResponse = await res.json();
  posts = data.posts;
  pagination = data.pagination;
} catch (e) {
  error = e instanceof Error ? e.message : "Bilinmeyen hata";
  console.error("Rehberler sayfasƒ± hatasƒ±:", error);
}

const title = currentPage > 1
  ? `Rehberler - Sayfa ${currentPage} - 3D-labX`
  : "Rehberler - 3D-labX";

const description = posts.length > 0
  ? `3D baskƒ± rehberleri: ${posts.slice(0, 3).map((p) => p.title_tr).join(", ")}`
  : "3D baskƒ± rehberleri, nasƒ±l yapƒ±lƒ±r yazƒ±larƒ± ve ba≈ülangƒ±√ß kƒ±lavuzlarƒ±.";

const prevUrl = pagination?.hasPrev ? `/rehberler?page=${currentPage - 1}` : null;
const nextUrl = pagination?.hasNext ? `/rehberler?page=${currentPage + 1}` : null;
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="category-page">
    <div class="container">
      <div class="page-header">
        <div class="page-title-group">
          <h1>Rehberler</h1>
          <p class="page-desc">Adƒ±m adƒ±m kƒ±lavuzlar ve nasƒ±l yapƒ±lƒ±r yazƒ±larƒ±</p>
        </div>
        {pagination && (
          <span class="post-count">{pagination.total} rehber</span>
        )}
      </div>

      <!-- Fƒ∞LAMENT Fƒ∞YAT KAR≈ûILA≈ûTIRMA - BENTO GRID -->
      <section class="filament-bento" id="filamentSection">
        <div class="filament-bento-header">
          <div class="filament-badge">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
            <span>Fiyat Takibi</span>
          </div>
          <h2>Filament & Re√ßine Fiyatlarƒ±</h2>
          <span class="filament-update" id="filamentUpdate"></span>
        </div>

        <div class="filament-bento-grid" id="filamentGrid">
          <div class="filament-loading">
            <div class="spinner"></div>
            <span>Y√ºkleniyor...</span>
          </div>
        </div>
      </section>

      <!-- Rehber Yazƒ±larƒ± Ba≈ülƒ±ƒüƒ± -->
      <div class="section-divider">
        <h2 class="section-title">Rehber Yazƒ±larƒ±</h2>
      </div>

      {error && (
        <div class="message message-error">
          <p><strong>ƒ∞√ßerikler y√ºklenirken bir hata olu≈ütu.</strong></p>
          <p class="text-sm">{error}</p>
        </div>
      )}

      {!error && posts.length === 0 && (
        <div class="empty-state">
          <div class="empty-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/><path d="m9 10 2 2 4-4"/></svg>
          </div>
          <h2>Hen√ºz Rehber Yok</h2>
          <p>Bu kategoride hen√ºz i√ßerik bulunmuyor. Yakƒ±nda detaylƒ± rehberler eklenecek!</p>
          <a href="/" class="btn btn-primary">Ana Sayfaya D√∂n</a>
        </div>
      )}

      {posts.length > 0 && (
        <div class="posts-grid" id="postsGrid">
          {posts.map((post) => (
            <article class={`post-card ${post.is_featured ? 'featured' : ''}`} data-post-id={post.id}>
              {post.image_url && (
                <a href={`/rehberler/${post.slug}`} class="post-image">
                  <img src={post.image_url} alt={post.title_tr} loading="lazy" />
                </a>
              )}
              <div class="post-content">
                {post.is_featured === 1 && (
                  <span class="badge badge-guide">Kapsamli Rehber</span>
                )}
                <h2>
                  <a href={`/rehberler/${post.slug}`}>{post.title_tr}</a>
                </h2>
                <p>{post.summary_tr}</p>
                {post.created_at && (
                  <time class="post-date" datetime={post.created_at}>
                    {new Date(post.created_at).toLocaleDateString("tr-TR", {
                      year: "numeric",
                      month: "long",
                      day: "numeric"
                    })}
                  </time>
                )}
              </div>
            </article>
          ))}
        </div>
      )}

      <!-- Infinite Scroll: Devam Et Butonu ve Loading -->
      <div class="infinite-scroll-container" id="infiniteScrollContainer">
        <div class="load-more-wrapper" id="loadMoreWrapper">
          <button class="load-more-btn" id="loadMoreBtn">
            <span class="btn-text">Devam Et</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m6 9 6 6 6-6"/></svg>
          </button>
          <div class="scroll-progress" id="scrollProgress">
            <span id="loadedCount">{posts.length}</span> / <span id="totalCount">{pagination?.total || posts.length}</span> rehber
          </div>
        </div>
        <div class="loading-more hidden" id="loadingMore">
          <div class="spinner"></div>
          <span>Y√ºkleniyor...</span>
        </div>
        <div class="all-loaded hidden" id="allLoaded">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <span>T√ºm rehberler y√ºklendi</span>
        </div>
      </div>

      <!-- Data for JavaScript -->
      <script define:vars={{ initialPosts: posts, initialPagination: pagination }}>
        window.__INITIAL_POSTS__ = initialPosts;
        window.__INITIAL_PAGINATION__ = initialPagination;
      </script>
    </div>
  </main>
</BaseLayout>

<style>
  .category-page {
    padding-top: 156px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .page-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .page-title-group {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .page-header h1 {
    margin: 0;
  }

  .page-desc {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin: 0;
  }

  .post-count {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
  }

  .empty-icon {
    color: var(--text-light);
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
  }

  .empty-state h2 {
    margin-bottom: var(--spacing-sm);
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: var(--spacing-lg);
  }

  @media (max-width: 640px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
  .section-divider {
    margin: 40px 0 24px;
    padding-top: 24px;
    border-top: 2px solid var(--border-soft);
  }

  .section-title {
    font-size: 1.3rem;
    margin: 0;
    background: linear-gradient(135deg, var(--text-main) 0%, var(--text-muted) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Infinite Scroll Styles */
  .infinite-scroll-container {
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .load-more-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .load-more-btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 32px;
    background: linear-gradient(135deg, #06B6D4 0%, #3B82F6 100%);
    color: white;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(6, 182, 212, 0.3);
  }

  .load-more-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(6, 182, 212, 0.4);
  }

  .load-more-btn:active {
    transform: translateY(0);
  }

  .load-more-btn svg {
    transition: transform 0.3s ease;
  }

  .load-more-btn:hover svg {
    transform: translateY(3px);
  }

  .scroll-progress {
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .loading-more {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 20px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .loading-more .spinner {
    width: 24px;
    height: 24px;
    border: 3px solid var(--border-soft);
    border-top-color: #06B6D4;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  .all-loaded {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 20px 30px;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: 50px;
    color: #22C55E;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .hidden {
    display: none !important;
  }

  /* New post animation */
  .post-card.new-post {
    animation: fadeInUp 0.5s ease forwards;
    opacity: 0;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .load-more-btn {
      padding: 12px 24px;
      font-size: 0.9rem;
    }
  }
</style>

<style is:global>
  /* === POST CARD STYLES (Global for infinite scroll) === */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  .post-card {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .post-card.featured {
    border-color: #06b6d4;
    border-width: 2px;
  }

  .post-image {
    display: block;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--spacing-md);
  }

  .badge-guide {
    background: #06b6d4;
    color: #fff;
    padding: 2px 10px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .post-content h2 {
    font-size: 0.95rem;
    margin: var(--spacing-sm) 0;
    line-height: 1.4;
