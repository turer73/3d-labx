            { title: 'Nozzle Tƒ±kanmasƒ±', sev: 'high', sym: 'Filament akmƒ±yor.', fixes: ['Soƒüuk √áekme yapƒ±n', '√úst kapaƒüƒ± a√ßƒ±n (PLA)', 'Di≈ülileri temizleyin'] },
            { title: 'VFA', sev: 'low', sym: 'Dikey √ßizgiler.', fixes: ['Hƒ±zƒ± artƒ±rƒ±n', 'Arachne kullanƒ±n'] }
        ];

        const dict = [
            { t: 'Arachne', d: 'Deƒüi≈üken √ßizgi geni≈üliƒüi kullanan duvar olu≈üturucu.' },
            { t: 'Pressure Advance', d: 'K√∂≈üe basƒ±ncƒ±nƒ± dengeler. Bambu\'da otomatik.' },
            { t: 'Seam', d: 'Katman ba≈ülangƒ±√ß noktasƒ±. Back veya Aligned se√ßin.' },
            { t: 'Fuzzy Skin', d: 'P√ºr√ºzl√º doku verir.' },
            { t: 'Prime Tower', d: '√áok renkli baskƒ±larda basƒ±n√ß kulesi.' },
            { t: 'Brim', d: 'Yapƒ±≈üma y√ºzeyi. 5-10mm √∂nerilir.' },
            { t: 'Aux Fan', d: 'Ek fan. PLA=a√ßƒ±k, ABS=kapalƒ±.' },
            { t: 'Heat Creep', d: 'Isƒ±nƒ±n yukarƒ± yayƒ±lmasƒ±. Kapaƒüƒ± a√ßƒ±n.' }
        ];

        let actMat = 'PLA';
