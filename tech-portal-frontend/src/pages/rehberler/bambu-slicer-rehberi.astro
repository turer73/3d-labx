        .infill.red { background: rgba(239,68,68,0.1); border-color: rgba(239,68,68,0.3); }
        .infill.blue { background: rgba(59,130,246,0.1); border-color: rgba(59,130,246,0.3); }
        .infill-head { display: flex; align-items: center; gap: 8px; margin-bottom: 8px; }
        .infill-dot { width: 8px; height: 8px; border-radius: 50%; }
        .infill-dot.green { background: #00AE42; }
        .infill-dot.red { background: #ef4444; }
        .infill-dot.blue { background: #3b82f6; }
        .infill-name { font-weight: 700; font-size: 14px; }
        .infill-name.green { color: #00AE42; }
        .infill-name.red { color: #f87171; }
        .infill-name.blue { color: #60a5fa; }
        .infill-desc { font-size: 12px; color: #94a3b8; line-height: 1.5; }

        /* Mobile */
        .mobile-head { display: none; position: fixed; top: 0; left: 0; right: 0; background: #0b1120; border-bottom: 1px solid #1e293b; padding: 12px 16px; z-index: 200; align-items: center; justify-content: space-between; }
        .mobile-brand { display: flex; align-items: center; gap: 8px; }
