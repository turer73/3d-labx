---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { marked } from "marked";
import { getLanguage, dateLocales, type Language } from "../../lib/api";
import { translations } from "../../lib/translations";

export const prerender = false;

const API_BASE = "https://tech-portal-api.turgut-d01.workers.dev";
const { slug } = Astro.params;

// Dil algƒ±la
const lang = getLanguage(Astro.request);
const t = translations[lang];

// Eski URL'lerden y√∂nlendirme (SEO i√ßin)
const redirects: Record<string, string> = {
  "bambu-lab-yazicilarda-sik-karsilasilan-sorunlar-ve-cozumleri-x1-p1-a1-serisi": "/sorun-cozumleri/bambu-lab-sorun-giderme",
  "creality-yaz-c-larda-s-k-kar-la-lan-sorunlar-ve-z-mleri-ender-3-cr-10-ml3q4vx1": "/sorun-cozumleri/creality-sorun-giderme"
};

if (redirects[slug as string]) {
  return Astro.redirect(redirects[slug as string]);
}

let post: any = null;
let relatedPosts: any[] = [];
let fetchError = "";

// Dil suffix helper - API'nin d√∂nd√ºrd√ºƒü√º formatƒ± kontrol et
function getLocalizedField(post: any, fieldBase: string, lang: Language): string {
  // √ñnce _lang formatƒ±nƒ± dene (title_en, content_de, vb.)
  const fieldNameWithLang = `${fieldBase}_${lang}`;
  if (post[fieldNameWithLang] && post[fieldNameWithLang].trim() !== "") {
    return post[fieldNameWithLang];
  }

  // T√ºrk√ße fallback
  const fieldNameTr = `${fieldBase}_tr`;
  if (post[fieldNameTr] && post[fieldNameTr].trim() !== "") {
    return post[fieldNameTr];
  }

  // Eski format: doƒürudan field adƒ± (title, content, summary)
  if (post[fieldBase] && post[fieldBase].trim() !== "") {
    return post[fieldBase];
  }

  return "";
}

try {
  // Ana makaleyi √ßek - dil parametresi ile
  const res = await fetch(`${API_BASE}/api/post/${slug}?lang=${lang}`);
  if (res.ok) {
    post = await res.json();
  }

  // ƒ∞lgili yazƒ±larƒ± √ßek (aynƒ± kategori) - dil parametresi ile
  if (post) {
    const relatedRes = await fetch(`${API_BASE}/api/posts?category=${post.category}&limit=4&lang=${lang}`);
    if (relatedRes.ok) {
      const relatedData = await relatedRes.json();
      const allRelated = relatedData.posts || [];
      relatedPosts = allRelated.filter((p: any) => p.slug !== slug).slice(0, 3);
    }
  }
} catch (e: any) {
  fetchError = e?.message || "Fetch error";
}

// Dile g√∂re i√ßerik al
const title = post ? getLocalizedField(post, "title", lang) : t.article.notFound;
const summary = post ? getLocalizedField(post, "summary", lang) : "";
const content = post ? getLocalizedField(post, "content", lang) : "";

// ƒ∞√ßerik HTML mi yoksa Markdown mƒ± kontrol et
function formatContent(content: string): string {
  if (!content) return "";
  if (content.includes("<p>") || content.includes("<h2>") || content.includes("<div>")) {
    return content;
  }
  if (content.includes("##") || content.includes("**") || content.includes("|")) {
    return marked.parse(content) as string;
  }
  return content
    .split(/\n\n+/)
    .map(p => `<p>${p.replace(/\n/g, "<br/>")}</p>`)
    .join("");
}

// H2 ba≈ülƒ±klarƒ±nƒ± √ßƒ±kar (i√ßindekiler i√ßin)
function extractHeadings(content: string): {id: string, text: string}[] {
  const headings: {id: string, text: string}[] = [];
  const regex = /<h2[^>]*>(.*?)<\/h2>/gi;
  let match;
  while ((match = regex.exec(content)) !== null) {
    const text = match[1].replace(/<[^>]+>/g, '');
    const id = text.toLowerCase().replace(/[^a-z0-9ƒü√º≈üƒ±√∂√ß√§√∂√º√ü]/gi, '-').replace(/-+/g, '-');
    headings.push({ id, text });
  }
  return headings;
}

// Okuma s√ºresini hesapla
function calculateReadTime(content: string): number {
  const text = content.replace(/<[^>]+>/g, '');
  const words = text.split(/\s+/).length;
  return Math.ceil(words / 200);
}

const formattedContent = formatContent(content);
const headings = extractHeadings(formattedContent);
const readTime = calculateReadTime(content);

// Tarihi formatla
const formattedDate = post?.created_at
  ? new Date(post.created_at).toLocaleDateString(dateLocales[lang], { day: "numeric", month: "long", year: "numeric" })
  : "";

// Kategori bilgileri - dile g√∂re
const categoryInfo: Record<string, {name: string, color: string, icon: string}> = {
  "3d-baski": { name: t.article.category3dPrinting, color: "#22c55e", icon: "üñ®Ô∏è" },
  "rehberler": { name: t.article.categoryGuide, color: "#06b6d4", icon: "üìö" },
  "incelemeler": { name: t.article.categoryReview, color: "#f59e0b", icon: "‚≠ê" },
  "sorun-cozumleri": { name: t.article.categoryTroubleshooting, color: "#ef4444", icon: "üîß" },
};

const catInfo = categoryInfo[post?.category] || { name: t.article.categoryArticle, color: "#3b82f6", icon: "üìÑ" };

// Back link - kategoriye g√∂re
const backLinks: Record<string, {url: string, text: string}> = {
  "sorun-cozumleri": { url: "/sorun-cozumleri", text: t.article.backToList },
  "rehberler": { url: "/rehberler", text: t.article.backToGuides },
  "3d-baski": { url: "/3d-baski", text: t.article.backToNews },
  "incelemeler": { url: "/incelemeler", text: t.article.backToReviews },
};
const backLink = backLinks[post?.category] || { url: "/", text: t.nav.home };

// Login URL - dile g√∂re
const loginUrl = lang === "tr" ? "/auth/giris" : "/auth/login";
---

<BaseLayout title={title}>
  <Header />

  {fetchError && (
    <main class="error-page">
      <p style="color: red;">Error: {fetchError}</p>
      <a href={backLink.url}>‚Üê {backLink.text}</a>
    </main>
  )}

  {!post && !fetchError && (
    <main class="error-page">
      <h1>{t.article.notFound}</h1>
      <p>{t.article.notFoundDesc}</p>
      <a href={backLink.url}>‚Üê {backLink.text}</a>
    </main>
  )}

  {post && (
    <>
      <!-- Hero Section -->
      <section class="article-hero">
        <div class="hero-container">
          <div class="hero-meta">
            <span class="category-badge" style={`background: ${catInfo.color}`}>
              {catInfo.icon} {catInfo.name}
            </span>
            <span class="meta-item">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
              {formattedDate}
            </span>
            <span class="meta-item">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              {readTime} {t.article.minRead}
            </span>
            <span class="meta-item author-badge">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
              Turer
            </span>
          </div>
          <h1 class="hero-title">{title}</h1>
          <p class="hero-summary">{summary}</p>
        </div>
      </section>

      <!-- Main Layout -->
      <div class="article-layout">
        <!-- Article Content -->
        <main class="article-main">
          <div class="article-content" set:html={formattedContent} />

          <!-- Article End CTA -->
          <div class="article-end-cta" id="articleEndCta">
            <div class="cta-icon">üîß</div>
            <div class="cta-content">
              <h4>Sorunun √ß√∂z√ºld√º m√º?</h4>
              <p>Yorum yap, sorularƒ±nƒ± sor veya √ß√∂z√ºm √∂nerilerini payla≈ü!</p>
            </div>
            <div class="cta-actions" id="ctaActions">
              <a href="#comments" class="cta-btn scroll-to-comments">Yorum Yaz</a>
              <a href="/auth/kayit" class="cta-btn-secondary" id="ctaJoinBtn">√úye Ol</a>
            </div>
          </div>

          <!-- Yorum B√∂l√ºm√º -->
          <section class="comments-section" id="comments">
            <div class="comments-header">
              <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                {t.article.comments}
                <span class="comment-count" id="commentCount">(0)</span>
              </h3>
            </div>
            <div class="comment-form-box">
              <div class="comment-login-prompt" id="loginPrompt">
                <p>{t.article.loginToComment}</p>
                <a href={loginUrl} class="btn-login">{t.article.login}</a>
              </div>
              <form class="comment-form" id="commentForm" style="display: none;">
                <div class="form-avatar" id="formAvatar"><span>?</span></div>
                <div class="form-input-wrapper">
                  <textarea id="commentInput" placeholder={t.article.writeComment} rows="3" maxlength="1000"></textarea>
                  <div class="form-actions">
                    <span class="char-count"><span id="charCount">0</span>/1000</span>
                    <button type="submit" class="btn-submit" id="submitComment">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
                      {t.article.send}
                    </button>
                  </div>
                </div>
              </form>
            </div>
            <div class="comments-list" id="commentsList">
              <div class="comments-loading" id="commentsLoading">
                <div class="loading-spinner"></div>
                <span>{t.article.commentsLoading}</span>
              </div>
              <div class="no-comments" id="noComments" style="display: none;">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                <p>{t.article.noComments}</p>
                <span>{t.article.beFirstComment}</span>
              </div>
            </div>
          </section>

          <a href={backLink.url} class="back-link">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            {backLink.text}
          </a>
        </main>

        <!-- Sidebar -->
        <aside class="sidebar">
          <!-- ƒ∞√ßindekiler -->
          {headings.length > 0 && (
            <div class="sidebar-card">
              <h3 class="sidebar-title">üìë {t.article.tableOfContents}</h3>
              <ul class="toc-list">
                {headings.map(h => (
                  <li><a href={`#${h.id}`}>{h.text}</a></li>
                ))}
              </ul>
            </div>
          )}

          <!-- Payla≈ü -->
          <div class="sidebar-card">
            <h3 class="sidebar-title">üîó {t.article.share}</h3>
            <div class="share-buttons">
              <button class="share-btn" id="share-x" title={t.article.shareOnX}>
                <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </button>
              <button class="share-btn" id="share-linkedin" title={t.article.shareOnLinkedIn}>
                <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </button>
              <button class="share-btn" id="share-copy" title={t.article.copyLink}>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
              </button>
            </div>
          </div>

          <!-- ƒ∞lgili Yazƒ±lar -->
          {relatedPosts.length > 0 && (
            <div class="sidebar-card">
              <h3 class="sidebar-title">üìö {t.article.relatedPosts}</h3>
              {relatedPosts.map(rp => (
                <a href={`/sorun-cozumleri/${rp.slug}`} class="related-post">
                  <div class="related-post-icon">{catInfo.icon}</div>
                  <div>
                    <div class="related-post-title">{getLocalizedField(rp, "title", lang)}</div>
                    <div class="related-post-cat">{catInfo.name}</div>
                  </div>
                </a>
              ))}
            </div>
          )}
        </aside>
      </div>
    </>
  )}
</BaseLayout>

<style>
  .error-page {
    padding-top: 160px;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: 160px 20px 80px;
  }

  /* Hero Section */
  .article-hero {
    padding: 140px 20px 50px;
    background: linear-gradient(180deg, var(--bg-card) 0%, var(--bg-main) 100%);
    border-bottom: 1px solid var(--border-soft);
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .category-badge {
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .author-badge {
    color: var(--accent);
    font-weight: 500;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
    color: var(--text-main);
  }

  .hero-summary {
    font-size: 1.15rem;
    color: var(--text-muted);
    line-height: 1.6;
    max-width: 700px;
  }

  /* Main Layout */
  .article-layout {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 40px;
    max-width: 1100px;
    margin: 0 auto;
    padding: 40px 20px 80px;
  }

  @media (max-width: 900px) {
    .article-layout {
      grid-template-columns: 1fr;
    }
    .sidebar {
      order: -1;
    }
    .hero-title {
      font-size: 1.8rem;
    }
  }

  /* Article Content */
  .article-main {
    min-width: 0;
  }

  .article-content {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
    padding: 36px;
    color: var(--text-main);
    line-height: 1.8;
    font-size: 1.05rem;
  }

  .article-content :global(p) {
    margin-bottom: 18px;
  }

  .article-content :global(h2) {
    font-size: 1.4rem;
    margin-top: 36px;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--accent);
    color: var(--text-main);
  }

  .article-content :global(h3) {
    font-size: 1.15rem;
    margin-top: 28px;
    margin-bottom: 12px;
    color: var(--text-main);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 18px;
    padding-left: 24px;
  }

  .article-content :global(li) {
    margin-bottom: 10px;
  }

  .article-content :global(strong),
  .article-content :global(b) {
    color: var(--accent);
    font-weight: 600;
  }

  /* Markdown Tables */
  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 24px 0;
    font-size: 0.95rem;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-soft);
  }

  .article-content :global(thead) {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(168, 85, 247, 0.15) 100%);
  }

  .article-content :global(th) {
    padding: 14px 16px;
    text-align: left;
    font-weight: 600;
    color: var(--text-main);
    border-bottom: 2px solid var(--accent);
  }

  .article-content :global(td) {
    padding: 12px 16px;
    border-bottom: 1px solid var(--border-soft);
    color: var(--text-main);
  }

