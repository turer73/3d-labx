---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { getApiBase } from "../../lib/api";

type Post = {
  id: number;
  title_tr: string;
  summary_tr: string;
  slug: string;
  category: string;
  image_url?: string;
  is_featured: number;
  created_at?: string;
};

type Pagination = {
  page: number;
  limit: number;
  total: number;
  totalPages: number;
  hasNext: boolean;
  hasPrev: boolean;
};

type ApiResponse = {
  posts: Post[];
  pagination: Pagination;
};

const API_BASE = getApiBase(Astro.request);

// URL'den sayfa numarasÄ±nÄ± al
const url = new URL(Astro.request.url);
const currentPage = Math.max(1, parseInt(url.searchParams.get("page") || "1", 10));
const POSTS_PER_PAGE = 12;

let posts: Post[] = [];
let pagination: Pagination | null = null;
let error: string | null = null;

try {
  const res = await fetch(
    `${API_BASE}/api/posts?category=yapay-zeka&page=${currentPage}&limit=${POSTS_PER_PAGE}`,
    { headers: { "Accept": "application/json" } }
  );

  if (!res.ok) {
    throw new Error(`API hatasÄ±: ${res.status}`);
  }

  const data: ApiResponse = await res.json();
  posts = data.posts;
  pagination = data.pagination;
} catch (e) {
  error = e instanceof Error ? e.message : "Bilinmeyen hata";
  console.error("Yapay Zeka sayfasÄ± hatasÄ±:", error);
}

const title = currentPage > 1
  ? `Yapay Zeka Haberleri - Sayfa ${currentPage} â€“ 3D-labX`
  : "Yapay Zeka Haberleri â€“ 3D-labX";

const description = posts.length > 0
  ? `En gÃ¼ncel yapay zeka haberleri: ${posts.slice(0, 3).map((p) => p.title_tr).join(", ")}`
  : "Yapay zeka dÃ¼nyasÄ±ndan en gÃ¼ncel haberler ve analizler.";

// Sayfalama URL'leri
const prevUrl = pagination?.hasPrev ? `/yapay-zeka?page=${currentPage - 1}` : null;
const nextUrl = pagination?.hasNext ? `/yapay-zeka?page=${currentPage + 1}` : null;
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="category-page">
    <div class="container">
      <div class="page-header">
      <h1>Yapay Zeka</h1>
      {pagination && (
        <span class="post-count">{pagination.total} iÃ§erik</span>
      )}
    </div>

    {error && (
      <div class="message message-error">
        <p><strong>Ä°Ã§erikler yÃ¼klenirken bir hata oluÅŸtu.</strong></p>
        <p class="text-sm">{error}</p>
      </div>
    )}

    {!error && posts.length === 0 && (
      <div class="empty-state">
        <div class="empty-icon">ðŸ¤–</div>
        <h2>HenÃ¼z Ä°Ã§erik Yok</h2>
        <p>Bu kategoride henÃ¼z iÃ§erik bulunmuyor.</p>
        <a href="/" class="btn btn-primary">Ana Sayfaya DÃ¶n</a>
      </div>
    )}

    {posts.length > 0 && (
      <div class="posts-grid">
        {posts.map((post) => (
          <article class={`post-card ${post.is_featured ? 'featured' : ''}`}>
            {post.image_url && (
              <a href={`/yapay-zeka/${post.slug}`} class="post-image">
                <img src={post.image_url} alt={post.title_tr} loading="lazy" />
              </a>
            )}
            <div class="post-content">
              {post.is_featured === 1 && (
                <span class="badge badge-primary">Ã–ne Ã‡Ä±kan</span>
              )}
              <h2>
                <a href={`/yapay-zeka/${post.slug}`}>{post.title_tr}</a>
              </h2>
              <p>{post.summary_tr}</p>
              {post.created_at && (
                <time class="post-date" datetime={post.created_at}>
                  {new Date(post.created_at).toLocaleDateString("tr-TR", {
                    year: "numeric",
                    month: "long",
                    day: "numeric"
                  })}
                </time>
              )}
            </div>
          </article>
        ))}
      </div>
    )}

    {/* Sayfalama */}
    {pagination && pagination.totalPages > 1 && (
      <nav class="pagination" aria-label="Sayfa navigasyonu">
        <div class="pagination-wrapper">
          <a
            href={prevUrl || "#"}
            class={`pagination-btn ${!prevUrl ? 'disabled' : ''}`}
            aria-disabled={!prevUrl}
          >
            <svg class="arrow-left" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
            <span class="btn-text">Ã–nceki</span>
          </a>

          <div class="pagination-info">
            <span class="current-page">{pagination.page}</span>
            <span class="separator">/</span>
            <span class="total-pages">{pagination.totalPages}</span>
          </div>

          <a
            href={nextUrl || "#"}
            class={`pagination-btn ${!nextUrl ? 'disabled' : ''}`}
            aria-disabled={!nextUrl}
          >
            <span class="btn-text">Sonraki</span>
            <svg class="arrow-right" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
          </a>
        </div>
      </nav>
    )}
    </div>
  </main>
</BaseLayout>

<style>
  .category-page {
    padding-top: 156px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .page-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .page-header h1 {
    margin: 0;
  }

  .post-count {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .post-card {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .post-card.featured {
    border-color: var(--accent);
    border-width: 2px;
  }

  .post-image {
    display: block;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--spacing-lg);
  }

  .post-content h2 {
    font-size: 1.1rem;
    margin: var(--spacing-sm) 0;
    line-height: 1.4;
  }

  .post-content h2 a {
    color: var(--text-main);
    text-decoration: none;
  }

  .post-content h2 a:hover {
    color: var(--accent);
  }

  .post-content p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-date {
    display: block;
    margin-top: var(--spacing-md);
    font-size: 0.8rem;
    color: var(--text-light);
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
  }

  .empty-state h2 {
    margin-bottom: var(--spacing-sm);
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: var(--spacing-lg);
  }

  @media (max-width: 640px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
