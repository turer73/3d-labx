---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";

const title = "3D Baskƒ± Maƒüazasƒ± - Hazƒ±r Baskƒ±lar";
const description = "Topluluk √ºyelerinin 3D yazƒ±cƒ± ile √ºrettiƒüi √∂zel tasarƒ±m √ºr√ºnler. Dekoratif lambalar, fig√ºrler ve daha fazlasƒ±.";

const API_BASE = "https://tech-portal-api.turgut-d01.workers.dev";

// √úr√ºnleri API'den √ßek
let products = [];
let categories = [];

try {
  const [productsRes, categoriesRes] = await Promise.all([
    fetch(`${API_BASE}/api/products?limit=50`),
    fetch(`${API_BASE}/api/products/categories`)
  ]);

  if (productsRes.ok) {
    const data = await productsRes.json();
    products = data.products || [];
  }

  if (categoriesRes.ok) {
    const data = await categoriesRes.json();
    categories = data.categories || [];
  }
} catch (err) {
  console.error("Products fetch error:", err);
}
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="store-page">
    <div class="container">
      <!-- Hero Section -->
      <section class="store-hero">
        <div class="hero-content">
          <span class="hero-badge">üõí 3D Baskƒ± Maƒüazasƒ±</span>
          <h1>Hazƒ±r Baskƒ±lar</h1>
          <p>Topluluk √ºyelerinin 3D yazƒ±cƒ± ile √ºrettiƒüi √∂zel tasarƒ±m √ºr√ºnler. Her biri titizlikle basƒ±lmƒ±≈ü ve kullanƒ±ma hazƒ±r.</p>
        </div>
        <div class="hero-actions">
          <a href="/magaza/urun-ekle" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg>
            √úr√ºn Sat
          </a>
          <a href="/magaza/urunlerim" class="btn btn-outline">√úr√ºnlerim</a>
        </div>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-value">{products.length}</span>
            <span class="stat-label">√úr√ºn</span>
          </div>
          <div class="stat">
            <span class="stat-value">üöö</span>
            <span class="stat-label">√úcretsiz Kargo</span>
          </div>
          <div class="stat">
            <span class="stat-value">‚úì</span>
            <span class="stat-label">G√ºvenli √ñdeme</span>
          </div>
        </div>
      </section>

      <!-- Kategori Filtresi -->
      {categories.length > 0 && (
        <section class="filters">
          <button class="filter-btn active" data-category="all">T√ºm√º ({products.length})</button>
          {categories.map(cat => (
            <button class="filter-btn" data-category={cat.category}>
              {cat.category} ({cat.count})
            </button>
          ))}
        </section>
      )}

      <!-- √úr√ºn Yok -->
      {products.length === 0 ? (
        <section class="empty-state">
          <div class="empty-icon">üì¶</div>
          <h2>Hen√ºz √ºr√ºn yok</h2>
          <p>ƒ∞lk √ºr√ºn√º ekleyen siz olun!</p>
          <a href="/magaza/urun-ekle" class="btn btn-primary">√úr√ºn Ekle</a>
        </section>
      ) : (
        <section class="products-grid">
          {products.map(product => (
            <article class="product-card" data-category={product.category}>
              <div class="product-image">
                {product.image_url ? (
                  <img src={product.image_url} alt={product.title} loading="lazy" />
                ) : (
                  <div class="no-image">üì¶</div>
                )}
                <span class="product-category">{product.category}</span>
                {product.stock <= 3 && product.stock > 0 && (
                  <span class="stock-warning">Son {product.stock} adet!</span>
                )}
              </div>
              <div class="product-info">
                <h3 class="product-name">{product.title}</h3>
                <p class="product-desc">{product.description || ""}</p>

                {product.features && (
                  <div class="product-features">
                    {product.features.split(",").slice(0, 3).map(feature => (
                      <span class="feature-tag">{feature.trim()}</span>
                    ))}
                  </div>
                )}

                <div class="product-seller">
                  <span class="seller-avatar">
                    {product.avatar_url ? (
                      <img src={product.avatar_url} alt={product.username} />
                    ) : (
                      (product.display_name || product.username || "?").charAt(0).toUpperCase()
                    )}
                  </span>
                  <span class="seller-name">{product.display_name || product.username}</span>
                </div>

                <div class="product-footer">
                  <div class="product-price">
                    <span class="price">{product.price.toLocaleString("tr-TR")} TL</span>
                  </div>
                  <a href={product.shopier_url} target="_blank" rel="noopener" class="buy-btn">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="21" r="1"/><circle cx="20" cy="21" r="1"/><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/></svg>
                    Satƒ±n Al
