<script define:vars={{ failId: fail?.id, slug }}>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

  function getAuthToken() {
    return localStorage.getItem('authToken');
  }

  // Thumbnail tƒ±klama
  const thumbnails = document.querySelectorAll('.thumbnail');
  const mainImage = document.getElementById('mainImage') as HTMLImageElement;

  thumbnails.forEach(thumb => {
    thumb.addEventListener('click', () => {
      const src = thumb.getAttribute('data-src');
      if (src && mainImage) {
        mainImage.src = src;
        thumbnails.forEach(t => t.classList.remove('active'));
        thumb.classList.add('active');
      }
    });
  });

  // Login kontrol√º
  const commentForm = document.getElementById('commentForm');
  const loginPrompt = document.getElementById('loginPrompt');

  if (!getAuthToken()) {
    commentForm?.classList.add('hidden');
    loginPrompt?.classList.remove('hidden');
  }

  // "Bu bana da oldu" butonu
  const metooBtn = document.getElementById('metooBtn');
  const metooCount = document.getElementById('metooCount');

  metooBtn?.addEventListener('click', async () => {
    const token = getAuthToken();
    if (!token) {
      (window as any).showToast?.('L√ºtfen giri≈ü yapƒ±n', 'warning');
      return;
    }

    try {
      const res = await fetch(`${API_URL}/api/fails/metoo`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({ fail_id: failId })
      });

      const data = await res.json();

      if (res.ok) {
        if (data.action === 'added') {
          metooBtn.classList.add('active');
          (window as any).showToast?.('Eklendi!', 'success');
        } else {
          metooBtn.classList.remove('active');
        }
        if (metooCount) {
          metooCount.textContent = data.count.toString();
        }
      }
    } catch (err) {
      console.error('Metoo error:', err);
    }
  });

  // Payla≈ü butonu
  const shareBtn = document.getElementById('shareBtn');
  shareBtn?.addEventListener('click', async () => {
    const url = window.location.href;
    if (navigator.share) {
      try {
        await navigator.share({ url });
      } catch {}
    } else {
      await navigator.clipboard.writeText(url);
      (window as any).showToast?.('Link kopyalandƒ±!', 'success');
    }
  });

  // Yorum g√∂nderme
  commentForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const token = getAuthToken();
    if (!token) {
      (window as any).showToast?.('L√ºtfen giri≈ü yapƒ±n', 'warning');
      return;
    }

    const content = (document.getElementById('commentContent') as HTMLTextAreaElement)?.value?.trim();
    const isSolution = (document.getElementById('isSolution') as HTMLInputElement)?.checked;

    if (!content || content.length < 3) {
      (window as any).showToast?.('Yorum en az 3 karakter olmalƒ±dƒ±r', 'warning');
      return;
    }

    try {
      const res = await fetch(`${API_URL}/api/fails/comments`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          fail_id: failId,
          content,
          is_solution: isSolution ? 1 : 0
        })
      });

      if (res.ok) {
        (window as any).showToast?.('Yorumunuz eklendi!', 'success');
        window.location.reload();
      } else {
        const data = await res.json();
        (window as any).showToast?.(data.error || 'Bir hata olu≈ütu', 'error');
      }
    } catch (err) {
      console.error('Comment error:', err);
      (window as any).showToast?.('Bir hata olu≈ütu', 'error');
    }
  });
</script>
