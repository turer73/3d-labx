---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Header from "../../../components/Header.astro";
import { getApiBase } from "../../../lib/api";

export const prerender = false;

const { slug } = Astro.params;
const API_BASE = getApiBase(Astro.request);

let fail: any = null;
let comments: any[] = [];
let relatedFails: any[] = [];

// Ba≈üarƒ±sƒ±zlƒ±k detayƒ±nƒ± √ßek
try {
  const res = await fetch(`${API_BASE}/api/fails/${slug}`);
  if (res.ok) {
    const data = await res.json();
    fail = data.fail;
    comments = data.comments || [];
  }
} catch (e) {
  console.error("Fail y√ºklenemedi:", e);
}

// ƒ∞lgili ba≈üarƒ±sƒ±zlƒ±klar (aynƒ± tipte)
if (fail) {
  try {
    const res = await fetch(`${API_BASE}/api/fails?type=${fail.fail_type}&limit=4`);
    if (res.ok) {
      const data = await res.json();
      relatedFails = (data.fails || []).filter((f: any) => f.id !== fail.id).slice(0, 3);
    }
  } catch (e) {
    console.error("ƒ∞lgili ba≈üarƒ±sƒ±zlƒ±klar y√ºklenemedi:", e);
  }
}

// G√∂rselleri parse et
function parseImages(images: string): string[] {
  try {
    return JSON.parse(images || '[]');
  } catch {
    return [];
  }
}

// Tarihi formatla
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('tr-TR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}

// Fail type emoji ve label
function getFailEmoji(type: string): string {
  const emojis: Record<string, string> = {
    'spaghetti': 'üçù',
    'layer_shift': 'üìä',
    'warping': 'üåä',
    'stringing': 'üï∏Ô∏è',
    'adhesion': 'üí®',
    'clog': 'üîß',
    'other': '‚ùì'
  };
  return emojis[type] || 'üî•';
}

function getFailLabel(type: string): string {
  const labels: Record<string, string> = {
    'spaghetti': 'Spagetti',
    'layer_shift': 'Katman Kaymasƒ±',
    'warping': 'Warping',
    'stringing': 'Stringing',
    'adhesion': 'Yapƒ±≈üma Sorunu',
    'clog': 'Tƒ±kanma',
    'other': 'Diƒüer'
  };
  return labels[type] || type;
}

const images = fail ? parseImages(fail.images) : [];
const firstImage = images[0] || null;
---

<BaseLayout
