  }

  .form-header p {
    color: var(--text-muted);
    margin: 0;
  }

  .project-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .form-section {
    padding: 20px;
    background: var(--bg-main);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
  }

  .form-section h3 {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1rem;
    margin: 0 0 20px;
    color: var(--text-main);
  }

  .section-icon {
    font-size: 1.2rem;
  }

  .form-row {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
  }

  .form-row:last-child {
    margin-bottom: 0;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
    position: relative;
  }

  .form-group.half {
    flex: 1;
  }

  .form-group label {
    display: flex;
    align-items: center;
    gap: 6px;
    font-weight: 600;
    font-size: 0.9rem;
