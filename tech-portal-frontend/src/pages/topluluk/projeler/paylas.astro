    transform: none;
  }

  .login-notice {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    padding: 60px 40px;
    text-align: center;
  }

  .login-notice svg {
    color: #10B981;
  }

  .login-notice h3 {
    margin: 0;
    font-size: 1.3rem;
  }

  .login-notice p {
    margin: 0;
    color: var(--text-muted);
  }

  .hidden {
    display: none !important;
  }

  @media (max-width: 640px) {
    .project-share-page {
      padding-top: 120px;
    }

    .form-card {
      padding: 20px;
    }

    .form-row {
      flex-direction: column;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

  let uploadedImages: { file: File; url?: string; preview: string }[] = [];

  function getAuthToken() {
    return localStorage.getItem('authToken');
  }

  // Login kontrol√º
  const form = document.getElementById('projectForm');
  const loginNotice = document.getElementById('loginNotice');

  if (!getAuthToken()) {
    form?.classList.add('hidden');
    loginNotice?.classList.remove('hidden');
  }

  // Karakter saya√ßlarƒ±
  const titleInput = document.getElementById('title');
  const titleCount = document.getElementById('titleCount');
  const descInput = document.getElementById('description');
  const descCount = document.getElementById('descCount');

  titleInput?.addEventListener('input', () => {
    if (titleCount) titleCount.textContent = titleInput.value.length.toString();
  });

  descInput?.addEventListener('input', () => {
    if (descCount) descCount.textContent = descInput.value.length.toString();
  });

  // G√∂rsel y√ºkleme
  const imageUploadArea = document.getElementById('imageUploadArea');
  const imageInput = document.getElementById('imageInput');
  const imagePreviews = document.getElementById('imagePreviews');
  const uploadPlaceholder = document.getElementById('uploadPlaceholder');

  imageUploadArea?.addEventListener('click', (e) => {
    if ((e.target).closest('.image-preview')) return;
    imageInput?.click();
  });

  imageUploadArea?.addEventListener('dragover', (e) => {
    e.preventDefault();
    imageUploadArea.classList.add('dragover');
  });

  imageUploadArea?.addEventListener('dragleave', () => {
    imageUploadArea.classList.remove('dragover');
  });

  imageUploadArea?.addEventListener('drop', (e) => {
    e.preventDefault();
    imageUploadArea.classList.remove('dragover');
    const files = e.dataTransfer?.files;
    if (files) handleFiles(files);
  });

  imageInput?.addEventListener('change', (e) => {
    const files = (e.target).files;
    if (files) handleFiles(files);
  });

  async function handleFiles(files: FileList) {
    const token = getAuthToken();
    if (!token) {
      window.showToast?.('L√ºtfen giri≈ü yapƒ±n', 'warning');
      return;
    }

    for (const file of Array.from(files)) {
      if (!file.type.startsWith('image/')) continue;
      if (file.size > 5 * 1024 * 1024) {
        window.showToast?.(`${file.name} √ßok b√ºy√ºk (max 5MB)`, 'warning');
        continue;
      }
      if (uploadedImages.length >= 10) {
        window.showToast?.('En fazla 10 g√∂rsel y√ºkleyebilirsiniz', 'warning');
        break;
      }

      // Preview ekle
      const reader = new FileReader();
      reader.onload = async (e) => {
        const preview = document.createElement('div');
        preview.className = 'image-preview uploading';
        preview.innerHTML = `
          <img src="${e.target?.result}" alt="Preview" />
          <button type="button" class="remove-btn">√ó</button>
        `;

        const idx = uploadedImages.length;
        const imgData = { file, preview: e.target?.result as string, url: undefined as string | undefined };
        uploadedImages.push(imgData);

        imagePreviews?.appendChild(preview);

        // Y√ºkle
        try {
          const formData = new FormData();
          formData.append('file', file);

          const uploadRes = await fetch(`${API_URL}/api/upload`, {
            method: 'POST',
            headers: { 'Authorization': `Bearer ${token}` },
            body: formData
          });

          if (uploadRes.ok) {
            const data = await uploadRes.json();
            imgData.url = data.url;
            preview.classList.remove('uploading');
          } else {
            throw new Error('Upload failed');
          }
        } catch (err) {
          console.error('Upload error:', err);
          preview.remove();
          uploadedImages = uploadedImages.filter((_, i) => i !== idx);
          window.showToast?.('G√∂rsel y√ºklenemedi', 'error');
        }

        preview.querySelector('.remove-btn')?.addEventListener('click', (ev) => {
          ev.stopPropagation();
          preview.remove();
          uploadedImages = uploadedImages.filter(img => img !== imgData);
        });
      };
      reader.readAsDataURL(file);
    }
  }

  // Form g√∂nderme
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const token = getAuthToken();
    if (!token) {
      window.showToast?.('L√ºtfen giri≈ü yapƒ±n', 'warning');
      return;
    }

    const title = (document.getElementById('title'))?.value?.trim();
    const description = (document.getElementById('description'))?.value?.trim();
    const printerModel = (document.getElementById('printerModel'))?.value?.trim();
    const filamentType = (document.getElementById('filamentType'))?.value;
    const filamentBrand = (document.getElementById('filamentBrand'))?.value?.trim();
    const printTime = parseFloat((document.getElementById('printTime'))?.value) || null;
    const printSettings = (document.getElementById('printSettings'))?.value?.trim();
    const modelUrl = (document.getElementById('modelUrl'))?.value?.trim();
    const modelSource = (document.getElementById('modelSource'))?.value;

    if (!title || title.length < 5) {
      window.showToast?.('Ba≈ülƒ±k en az 5 karakter olmalƒ±dƒ±r', 'warning');
      return;
    }

    const images = uploadedImages.filter(img => img.url).map(img => img.url);
    if (images.length === 0) {
      window.showToast?.('En az bir g√∂rsel y√ºkleyin', 'warning');
      return;
    }

    const submitBtn = document.getElementById('submitBtn');
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = 'Payla≈üƒ±lƒ±yor...';
    }

    try {
      const res = await fetch(`${API_URL}/api/projects`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          title,
          description,
          images,
          printer_model: printerModel,
          filament_type: filamentType,
          filament_brand: filamentBrand,
          print_time_hours: printTime,
          print_settings: printSettings,
          model_url: modelUrl,
          model_source: modelSource
        })
      });

      const data = await res.json();

      if (res.ok && data.slug) {
        window.showToast?.('Projeniz ba≈üarƒ±yla payla≈üƒ±ldƒ±!', 'success');
        window.location.href = `/topluluk/projeler/${data.slug}`;
      } else {
        window.showToast?.(data.error || 'Bir hata olu≈ütu', 'error');
      }
    } catch (err) {
      console.error('Project create error:', err);
      window.showToast?.('Bir hata olu≈ütu, l√ºtfen tekrar deneyin', 'error');
    } finally {
