    bottom: 12px;
    font-size: 0.75rem;
    color: var(--text-light);
  }

  textarea + .char-hint {
    bottom: 12px;
  }

  /* G√∂rsel Y√ºkleme */
  .image-upload-area {
    border: 2px dashed var(--border-soft);
