  },
  de: {
    pageTitle: "Ich habe gedruckt - 3D-Druckprojekte - 3D-labX",
    pageDesc: "3D-Druckprojekte, die von der Community geteilt wurden. Lassen Sie sich inspirieren, teilen Sie Ihre Projekte.",
    breadcrumbCommunity: "Community",
    breadcrumbProjects: "Ich habe gedruckt",
    title: "üé® Ich habe gedruckt",
    subtitle: "3D-Druckprojekte der Community",
    shareProject: "Projekt teilen",
    sortLabel: "Sortieren:",
    sortLatest: "Neueste",
    sortPopular: "Beliebt",
