  prev: string;
  next: string;
}> = {
  tr: {
    pageTitle: "Ben de Bastƒ±m - 3D Baskƒ± Projeleri - 3D-labX",
    pageDesc: "Topluluk tarafƒ±ndan payla≈üƒ±lan 3D baskƒ± projeleri. ƒ∞lham alƒ±n, projelerinizi payla≈üƒ±n.",
    breadcrumbCommunity: "Topluluk",
    breadcrumbProjects: "Ben de Bastƒ±m",
    title: "üé® Ben de Bastƒ±m",
    subtitle: "Topluluk tarafƒ±ndan payla≈üƒ±lan 3D baskƒ± projeleri",
    shareProject: "Proje Payla≈ü",
    sortLabel: "Sƒ±rala:",
    sortLatest: "En Yeni",
    sortPopular: "Pop√ºler",
    filamentLabel: "Filament:",
    filamentAll: "T√ºm√º",
    filamentResin: "Re√ßine",
    projectCount: "proje",
    featured: "√ñne √áƒ±kan",
    model: "Model",
    viewProject: "Projeyi G√∂r",
    likes: "Beƒüeni",
    views: "G√∂r√ºnt√ºleme",
    noProjects: "Hen√ºz proje yok",
    noProjectsDesc: "ƒ∞lk projeyi payla≈üan sen ol!",
    prev: "√ñnceki",
    next: "Sonraki"
  },
  en: {
    pageTitle: "I Printed It - 3D Print Projects - 3D-labX",
    pageDesc: "3D printing projects shared by the community. Get inspired, share your projects.",
    breadcrumbCommunity: "Community",
    breadcrumbProjects: "I Printed It",
    title: "üé® I Printed It",
    subtitle: "3D printing projects shared by the community",
    shareProject: "Share Project",
    sortLabel: "Sort:",
    sortLatest: "Latest",
    sortPopular: "Popular",
    filamentLabel: "Filament:",
    filamentAll: "All",
    filamentResin: "Resin",
    projectCount: "projects",
    featured: "Featured",
    model: "Model",
    viewProject: "View Project",
