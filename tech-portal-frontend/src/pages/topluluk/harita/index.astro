  let apiUrl = `${API_BASE}/api/map/makers?limit=50`;
  if (selectedCity) apiUrl += `&city=${encodeURIComponent(selectedCity)}`;
  if (filterPrinting) apiUrl += `&offers_printing=1`;

  const res = await fetch(apiUrl);
  if (res.ok) {
