    makers = data.makers || [];
  }
} catch (e) {
  console.error("Makers y√ºklenemedi:", e);
}

// Printers'ƒ± parse et
function parsePrinters(printers: string): string[] {
  try {
    return JSON.parse(printers || '[]');
