---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Header from "../../../components/Header.astro";
import { getApiBase, getLanguage, type Language } from "../../../lib/api";

export const prerender = false;

const lang = getLanguage(Astro.request);
const API_BASE = getApiBase(Astro.request);

// Çeviriler
const translations: Record<Language, {
  pageTitle: string;
  pageDesc: string;
  breadcrumbCommunity: string;
  breadcrumbForum: string;
  title: string;
  subtitle: string;
  newTopic: string;
  topics: string;
  messages: string;
  loadError: string;
}> = {
  tr: {
    pageTitle: "Forum - 3D-labX Topluluk",
    pageDesc: "3D baskı forumu. Sorularınızı sorun, tartışmalara katılın, deneyimlerinizi paylaşın.",
    breadcrumbCommunity: "Topluluk",
    breadcrumbForum: "Forum",
    title: "Forum",
    subtitle: "Sorularınızı sorun, tartışmalara katılın, deneyimlerinizi paylaşın",
    newTopic: "Yeni Konu",
    topics: "Konu",
    messages: "Mesaj",
    loadError: "Forum kategorileri yüklenemedi."
  },
  en: {
    pageTitle: "Forum - 3D-labX Community",
    pageDesc: "3D printing forum. Ask questions, join discussions, share your experiences.",
    breadcrumbCommunity: "Community",
    breadcrumbForum: "Forum",
    title: "Forum",
    subtitle: "Ask questions, join discussions, share your experiences",
    newTopic: "New Topic",
    topics: "Topics",
    messages: "Messages",
    loadError: "Failed to load forum categories."
  },
  de: {
    pageTitle: "Forum - 3D-labX Community",
    pageDesc: "3D-Druck-Forum. Stellen Sie Fragen, nehmen Sie an Diskussionen teil, teilen Sie Ihre Erfahrungen.",
    breadcrumbCommunity: "Community",
    breadcrumbForum: "Forum",
    title: "Forum",
    subtitle: "Fragen stellen, an Diskussionen teilnehmen, Erfahrungen teilen",
    newTopic: "Neues Thema",
    topics: "Themen",
    messages: "Nachrichten",
    loadError: "Forum-Kategorien konnten nicht geladen werden."
  }
};

const t = translations[lang];

// Kategori isimlerini dile göre getir
function getCatName(cat: any) {
  if (lang === 'en' && cat.name_en) return cat.name_en;
  if (lang === 'de' && cat.name_de) return cat.name_de;
  return cat.name;
}
function getCatDesc(cat: any) {
  if (lang === 'en' && cat.description_en) return cat.description_en;
  if (lang === 'de' && cat.description_de) return cat.description_de;
  return cat.description;
}

let categories: any[] = [];

try {
  const res = await fetch(`${API_BASE}/api/forum/categories?lang=${lang}`);
  if (res.ok) {
    const data = await res.json();
    categories = data.categories || [];
  }
} catch (e) {
  console.error("Forum kategorileri yüklenemedi:", e);
}
---

<BaseLayout
  title={t.pageTitle}
  description={t.pageDesc}
>
  <Header />

  <main class="forum-page">
    <div class="container">
      <div class="page-header">
        <div class="header-left">
          <nav class="breadcrumb">
            <a href="/topluluk">{t.breadcrumbCommunity}</a>
            <span>/</span>
            <span>{t.breadcrumbForum}</span>
          </nav>
          <h1>{t.title}</h1>
          <p>{t.subtitle}</p>
        </div>
        <div class="header-right">
          <a href="/topluluk/forum/yeni" class="btn btn-primary" id="newThreadBtn">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg>
            {t.newTopic}
          </a>
        </div>
      </div>

      <div class="categories-list">
        {categories.map((cat) => (
          <a href={`/topluluk/forum/${cat.slug}`} class="category-row" style={`--cat-color: ${cat.color}`}>
            <div class="cat-icon-wrap">
              <span class="cat-icon">{cat.icon}</span>
            </div>
            <div class="cat-main">
              <h2>{getCatName(cat)}</h2>
              <p>{getCatDesc(cat)}</p>
            </div>
            <div class="cat-stats">
              <div class="stat">
                <span class="stat-value">{cat.thread_count}</span>
                <span class="stat-label">{t.topics}</span>
              </div>
              <div class="stat">
                <span class="stat-value">{cat.post_count}</span>
                <span class="stat-label">{t.messages}</span>
              </div>
            </div>
            <div class="cat-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="m9 18 6-6-6-6"/></svg>
            </div>
          </a>
        ))}
      </div>

      {categories.length === 0 && (
        <div class="empty-state">
          <p>{t.loadError}</p>
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .forum-page {
    padding-top: 140px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 32px;
    gap: 20px;
    flex-wrap: wrap;
  }

  .breadcrumb {
    display: flex;
    gap: 8px;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 8px;
  }

  .breadcrumb a {
    color: #F97316;
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .page-header h1 {
    margin: 0 0 8px;
    font-size: 1.8rem;
  }

  .page-header p {
    margin: 0;
    color: var(--text-muted);
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
    color: white;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(249, 115, 22, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(249, 115, 22, 0.4);
  }

  .categories-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .category-row {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 20px 24px;
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .category-row:hover {
    border-color: var(--cat-color, #F97316);
    transform: translateX(4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .cat-icon-wrap {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, color-mix(in srgb, var(--cat-color, #F97316) 15%, transparent), color-mix(in srgb, var(--cat-color, #F97316) 5%, transparent));
    border-radius: 14px;
    flex-shrink: 0;
  }

  .cat-icon {
    font-size: 1.8rem;
  }

  .cat-main {
    flex: 1;
    min-width: 0;
  }

  .cat-main h2 {
    margin: 0 0 4px;
    font-size: 1.1rem;
    color: var(--text-main);
  }

  .cat-main p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .cat-stats {
    display: flex;
    gap: 24px;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 60px;
  }

  .stat-value {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-main);
  }

  .stat-label {
    font-size: 0.7rem;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .cat-arrow {
    color: var(--text-light);
    transition: transform 0.3s ease;
  }

  .category-row:hover .cat-arrow {
    transform: translateX(4px);
    color: var(--cat-color, #F97316);
  }

  .empty-state {
    text-align: center;
    padding: 60px 20px;
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .forum-page {
      padding-top: 120px;
    }

    .page-header {
      flex-direction: column;
    }

    .category-row {
      flex-wrap: wrap;
      padding: 16px;
      gap: 12px;
    }

    .cat-stats {
      width: 100%;
      justify-content: center;
      padding-top: 12px;
      border-top: 1px solid var(--border-soft);
    }

    .cat-arrow {
      display: none;
    }
  }
</style>
