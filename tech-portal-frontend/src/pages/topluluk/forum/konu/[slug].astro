      font-size: 1.3rem;
    }

    .thread-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<script define:vars={{ threadId: thread.id }}>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';
  
  // Auth token kontrol√º
  function getAuthToken() {
    return localStorage.getItem('auth_token');
  }

  // Karakter sayacƒ±
  const textarea = document.getElementById('replyContent');
  const charCount = document.getElementById('charCount');
  
  if (textarea && charCount) {
    textarea.addEventListener('input', () => {
      charCount.textContent = textarea.value.length.toString();
    });
  }

  // Login notice kontrol√º
  const form = document.getElementById('replyForm');
  const loginNotice = document.getElementById('loginNotice');
  
  if (!getAuthToken()) {
    if (form) form.classList.add('hidden');
    if (loginNotice) loginNotice.classList.remove('hidden');
  }

  // Cevap g√∂nderme
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const token = getAuthToken();
      if (!token) {
        alert('L√ºtfen giri≈ü yapƒ±n');
        window.location.href = '/auth/giris';
        return;
      }

      const content = textarea?.value?.trim();
      if (!content || content.length < 10) {
        alert('Cevap en az 10 karakter olmalƒ±dƒ±r');
        return;
      }

      const submitBtn = document.getElementById('submitReply');
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.innerHTML = 'G√∂nderiliyor...';
      }

      try {
        const res = await fetch(`${API_URL}/api/forum/threads/${threadId}/replies`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ content })
        });

        const data = await res.json();

        if (res.ok) {
          // Sayfayƒ± yenile
          window.location.reload();
        } else {
          alert(data.error || 'Bir hata olu≈ütu');
        }
      } catch (err) {
        console.error('Reply error:', err);
        alert('Bir hata olu≈ütu');
      } finally {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="22" x2="11" y1="2" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg> G√∂nder';
        }
      }
    });
  }

  // Beƒüeni
  document.querySelectorAll('.like-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const token = getAuthToken();
      if (!token) {
        alert('Beƒüenmek i√ßin giri≈ü yapƒ±n');
        return;
      }

      const type = btn.dataset.type;
      const id = btn.dataset.id;

      try {
        const res = await fetch(`${API_URL}/api/likes`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ type, id: parseInt(id) })
        });

        if (res.ok) {
          const data = await res.json();
          btn.classList.toggle('liked', data.liked);
        }
      } catch (err) {
        console.error('Like error:', err);
      }
    });
  });

  // Payla≈ü
  document.querySelector('.share-btn')?.addEventListener('click', () => {
    if (navigator.share) {
      navigator.share({
        title: document.title,
        url: window.location.href
      });
    } else {
      navigator.clipboard.writeText(window.location.href);
      alert('Link kopyalandƒ±!');
    }
  });
</script>
