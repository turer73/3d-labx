import { marked } from "marked";

export const prerender = false;

const { slug } = Astro.params;
const API_BASE = getApiBase(Astro.request);

// Markdown ayarlarƒ± - g√ºvenli HTML render
marked.setOptions({
  breaks: true,
  gfm: true
});

let thread: any = null;
let replies: any[] = [];
let pagination: any = null;

try {
  const res = await fetch(`${API_BASE}/api/forum/threads/${slug}`);
  if (res.ok) {
    const data = await res.json();
    thread = data.thread;
    replies = data.replies || [];
    pagination = data.pagination;
  }
} catch (e) {
  console.error("Konu y√ºklenemedi:", e);
}

if (!thread) {
  return Astro.redirect("/topluluk/forum");
}

// YouTube linklerini placeholder ile deƒüi≈ütir (Markdown parse √∂ncesi)
function extractYouTubeLinks(content: string): { content: string, videos: string[] } {
  const videos: string[] = [];

  // YouTube URL patterns - satƒ±r ba≈üƒ±nda veya tek ba≈üƒ±na olan linkler
  const youtubePatterns = [
    // https://www.youtube.com/watch?v=VIDEO_ID
    /(?:^|\n)(?:https?:\/\/)?(?:www\.)?youtube\.com\/watch\?v=([a-zA-Z0-9_-]{11})(?:[^\s\n]*)?(?:\n|$)/gm,
    // https://youtu.be/VIDEO_ID
    /(?:^|\n)(?:https?:\/\/)?(?:www\.)?youtu\.be\/([a-zA-Z0-9_-]{11})(?:[^\s\n]*)?(?:\n|$)/gm,
  ];

  let result = content;

  youtubePatterns.forEach(pattern => {
    result = result.replace(pattern, (match, videoId) => {
      const index = videos.length;
      videos.push(videoId);
      return `\n%%YOUTUBE_VIDEO_${index}%%\n`;
    });
  });

  return { content: result, videos };
}

// Placeholder'larƒ± ger√ßek iframe'lerle deƒüi≈ütir (Markdown parse sonrasƒ±)
function restoreYouTubeEmbeds(html: string, videos: string[]): string {
  let result = html;

  videos.forEach((videoId, index) => {
    const placeholder = `%%YOUTUBE_VIDEO_${index}%%`;
    // <p> i√ßinde olabilir, onu da temizle
    const embedHtml = `<div class="video-wrapper"><iframe src="https://www.youtube.com/embed/${videoId}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen loading="lazy"></iframe></div>`;

    result = result.replace(`<p>${placeholder}</p>`, embedHtml);
    result = result.replace(placeholder, embedHtml);
  });

  return result;
}

// ƒ∞√ßeriƒüi Markdown'dan HTML'e d√∂n√º≈üt√ºr
function renderContent(content: string): string {
  if (!content) return '';

  // Eƒüer i√ßerik zaten HTML ise (HTML tag kontrol√º)
  if (content.trim().startsWith('<') && (content.includes('</') || content.includes('/>'))) {
    return content;
  }

  // 1. YouTube linklerini √ßƒ±kar ve placeholder koy
  const { content: processedContent, videos } = extractYouTubeLinks(content);

  // 2. Markdown'ƒ± HTML'e d√∂n√º≈üt√ºr
  let html = marked.parse(processedContent) as string;

  // 3. Placeholder'larƒ± ger√ßek iframe'lerle deƒüi≈ütir
  html = restoreYouTubeEmbeds(html, videos);

  return html;
}

// Thread ve reply i√ßeriklerini render et
const renderedThreadContent = renderContent(thread.content);

function timeAgo(dateStr: string) {
  const date = new Date(dateStr);
  const now = new Date();
  const diff = Math.floor((now.getTime() - date.getTime()) / 1000);
  
  if (diff < 60) return "Az √∂nce";
  if (diff < 3600) return `${Math.floor(diff / 60)} dakika √∂nce`;
  if (diff < 86400) return `${Math.floor(diff / 3600)} saat √∂nce`;
  if (diff < 604800) return `${Math.floor(diff / 86400)} g√ºn √∂nce`;
  return date.toLocaleDateString("tr-TR", { day: "numeric", month: "long", year: "numeric" });
}
