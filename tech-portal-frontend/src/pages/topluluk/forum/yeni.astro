const t = translations[lang];

let categories: any[] = [];

try {
  const res = await fetch(`${API_BASE}/api/forum/categories`);
  if (res.ok) {
    const data = await res.json();
    categories = data.categories || [];
  }
} catch (e) {
  console.error("Kategoriler yüklenemedi:", e);
}
---

<BaseLayout
  title={t.pageTitle}
  description={t.pageDesc}
>
  <Header />

  <main class="new-thread-page">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/topluluk">{t.breadcrumbCommunity}</a>
        <span>/</span>
        <a href="/topluluk/forum">{t.breadcrumbForum}</a>
        <span>/</span>
        <span>{t.breadcrumbNewTopic}</span>
      </nav>

      <div class="form-card">
        <div class="form-header">
          <h1>{t.title}</h1>
          <p>{t.subtitle}</p>
        </div>

        <form id="newThreadForm" class="thread-form">
          <div class="form-group">
            <label for="category">{t.categoryLabel}</label>
            <select id="category" name="category" required>
              <option value="">{t.categoryPlaceholder}</option>
              {categories.map((cat) => (
                <option value={cat.id} selected={cat.slug === preselectedCategory}>
                  {cat.icon} {cat.name}
                </option>
              ))}
            </select>
          </div>

          <div class="form-group">
            <label for="title">{t.titleLabel}</label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder={t.titlePlaceholder}
              minlength="5"
              maxlength="200"
              required
            />
            <span class="char-hint"><span id="titleCount">0</span>/200</span>
          </div>

          <div class="form-group">
            <label for="content">{t.contentLabel}</label>
            <textarea
              id="content"
              name="content"
              placeholder={t.contentPlaceholder}
              rows="10"
              minlength="20"
              maxlength="10000"
              required
            ></textarea>
            <span class="char-hint"><span id="contentCount">0</span>/10000</span>
          </div>

          <div class="form-tips">
            <h4>{t.tipsTitle}</h4>
            <ul>
              <li>{t.tip1}</li>
              <li>{t.tip2}</li>
              <li>{t.tip3}</li>
              <li>{t.tip4}</li>
            </ul>
          </div>

          <div class="form-actions">
            <a href="/topluluk/forum" class="btn btn-secondary">{t.cancelBtn}</a>
            <button type="submit" class="btn btn-primary" id="submitBtn">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg>
              {t.submitBtn}
            </button>
          </div>
        </form>

        <div class="login-notice hidden" id="loginNotice">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" x2="12" y1="8" y2="12"/><line x1="12" x2="12.01" y1="16" y2="16"/></svg>
          <p>{t.loginNotice} <a href="/auth/giris">{t.loginLink}</a>.</p>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .new-thread-page {
    padding-top: 140px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .breadcrumb {
    display: flex;
    gap: 8px;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 24px;
  }

  .breadcrumb a {
    color: #F97316;
    text-decoration: none;
  }

  .form-card {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 20px;
    padding: 32px;
  }

  .form-header {
    margin-bottom: 28px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--border-soft);
  }

  .form-header h1 {
    font-size: 1.5rem;
    margin: 0 0 8px;
  }

  .form-header p {
    color: var(--text-muted);
    margin: 0;
  }

  .thread-form {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
    position: relative;
  }

  .form-group label {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text-main);
  }

  .form-group select,
  .form-group input,
  .form-group textarea {
    padding: 14px 16px;
    background: var(--bg-main);
    border: 1px solid var(--border-soft);
    border-radius: 12px;
    font-size: 0.95rem;
    color: var(--text-main);
    transition: border-color 0.2s ease;
  }

  .form-group select:focus,
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #F97316;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 200px;
    line-height: 1.6;
  }

  .char-hint {
    position: absolute;
    right: 12px;
    bottom: 12px;
    font-size: 0.75rem;
    color: var(--text-light);
  }

  .form-tips {
    padding: 16px;
    background: rgba(249, 115, 22, 0.05);
    border: 1px solid rgba(249, 115, 22, 0.2);
    border-radius: 12px;
  }

  .form-tips h4 {
    font-size: 0.85rem;
    margin: 0 0 10px;
    color: #F97316;
  }

  .form-tips ul {
    margin: 0;
    padding-left: 20px;
    font-size: 0.85rem;
    color: var(--text-muted);
  }

  .form-tips li {
    margin-bottom: 4px;
  }

  .form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 12px;
    padding-top: 16px;
    border-top: 1px solid var(--border-soft);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .btn-secondary {
    background: var(--bg-main);
    color: var(--text-main);
    border: 1px solid var(--border-soft);
  }

  .btn-secondary:hover {
    border-color: var(--text-muted);
  }

  .btn-primary {
    background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(249, 115, 22, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(249, 115, 22, 0.4);
  }

  .btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .login-notice {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 40px;
    text-align: center;
    color: var(--text-muted);
  }

  .login-notice svg {
    color: #F97316;
  }

  .login-notice a {
    color: #F97316;
  }

  .hidden {
    display: none !important;
  }

  @media (max-width: 640px) {
    .new-thread-page {
      padding-top: 120px;
    }

    .form-card {
      padding: 20px;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script define:vars={{
  toastLogin: t.toastLogin,
  toastCategory: t.toastCategory,
  toastTitleMin: t.toastTitleMin,
  toastContentMin: t.toastContentMin,
  toastSuccess: t.toastSuccess,
  toastError: t.toastError,
  submitting: t.submitting,
  submitBtnText: t.submitBtn
}}>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

  function getAuthToken() {
    return localStorage.getItem('authToken');
  }

  // Login kontrolü
  const form = document.getElementById('newThreadForm');
  const loginNotice = document.getElementById('loginNotice');

  if (!getAuthToken()) {
    if (form) form.classList.add('hidden');
    if (loginNotice) loginNotice.classList.remove('hidden');
  }

  // Karakter sayaçları
  const titleInput = document.getElementById('title');
  const titleCount = document.getElementById('titleCount');
  const contentInput = document.getElementById('content');
  const contentCount = document.getElementById('contentCount');

  titleInput?.addEventListener('input', () => {
    if (titleCount) titleCount.textContent = titleInput.value.length.toString();
  });

  contentInput?.addEventListener('input', () => {
    if (contentCount) contentCount.textContent = contentInput.value.length.toString();
  });

  // Form gönderme
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const token = getAuthToken();
    if (!token) {
      window.showToast(`${toastLogin} <a href="/auth/giris">→</a>`, 'warning');
      return;
    }

    const categoryId = document.getElementById('category')?.value;
    const title = document.getElementById('title')?.value?.trim();
    const content = document.getElementById('content')?.value?.trim();

    if (!categoryId) {
      window.showToast(toastCategory, 'warning');
      return;
    }

    if (!title || title.length < 5) {
      window.showToast(toastTitleMin, 'warning');
      return;
    }

    if (!content || content.length < 20) {
      window.showToast(toastContentMin, 'warning');
      return;
    }

    const submitBtn = document.getElementById('submitBtn');
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = submitting;
    }

    try {
      const res = await fetch(`${API_URL}/api/forum/threads`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          category_id: parseInt(categoryId),
          title,
          content
        })
      });

      const data = await res.json();

      if (res.ok && data.slug) {
        window.showToast(toastSuccess, 'success');
        window.location.href = `/topluluk/forum/konu/${data.slug}`;
      } else {
        window.showToast(data.error || toastError, 'error');
      }
    } catch (err) {
      console.error('Thread create error:', err);
      window.showToast(toastError, 'error');
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg> ' + submitBtnText;
      }
    }
  });
</script>
