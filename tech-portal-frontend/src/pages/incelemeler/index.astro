---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { getApiBase, getLanguage, type Language } from "../../lib/api";

export const prerender = false;

type Post = {
  id: number;
  title: string;
  title_tr: string;
  title_en?: string;
  title_de?: string;
  summary: string;
  summary_tr: string;
  summary_en?: string;
  summary_de?: string;
  slug: string;
  category: string;
  image_url?: string;
  is_featured: number;
  created_at?: string;
};

type Pagination = {
  page: number;
  limit: number;
  total: number;
  totalPages: number;
  hasNext: boolean;
  hasPrev: boolean;
};

type ApiResponse = {
  posts: Post[];
  pagination: Pagination;
};

const lang = getLanguage(Astro.request);
const API_BASE = getApiBase(Astro.request);

// Çeviriler
const translations: Record<Language, {
  pageTitle: string;
  pageDesc: string;
  defaultDesc: string;
  heroTitle: string;
  heroDesc: string;
  reviewCount: string;
  detailedReview: string;
  errorLoading: string;
  noReviewsTitle: string;
  noReviewsDesc: string;
  backToHome: string;
  loading: string;
  noMorePosts: string;
}> = {
  tr: {
    pageTitle: "İncelemeler - 3D-labX",
    pageDesc: "3D yazıcı ve ekipman incelemeleri:",
    defaultDesc: "3D yazıcı, filament ve ekipman incelemeleri. Detaylı test sonuçları ve karşılaştırmalar.",
    heroTitle: "İncelemeler",
    heroDesc: "3D yazıcı, filament ve ekipman incelemeleri",
    reviewCount: "inceleme",
    detailedReview: "Detaylı İnceleme",
    errorLoading: "İçerikler yüklenirken bir hata oluştu.",
    noReviewsTitle: "Henüz İnceleme Yok",
    noReviewsDesc: "Bu kategoride henüz içerik bulunmuyor. Yakında detaylı incelemeler eklenecek!",
    backToHome: "Ana Sayfaya Dön",
    loading: "Yükleniyor...",
    noMorePosts: "Tüm incelemeler yüklendi"
  },
  en: {
    pageTitle: "Reviews - 3D-labX",
    pageDesc: "3D printer and equipment reviews:",
    defaultDesc: "3D printer, filament and equipment reviews. Detailed test results and comparisons.",
    heroTitle: "Reviews",
    heroDesc: "3D printer, filament and equipment reviews",
    reviewCount: "reviews",
    detailedReview: "Detailed Review",
    errorLoading: "An error occurred while loading content.",
    noReviewsTitle: "No Reviews Yet",
    noReviewsDesc: "No content in this category yet. Detailed reviews coming soon!",
    backToHome: "Back to Home",
    loading: "Loading...",
    noMorePosts: "All reviews loaded"
  },
  de: {
    pageTitle: "Bewertungen - 3D-labX",
    pageDesc: "3D-Drucker und Ausrüstungsbewertungen:",
    defaultDesc: "3D-Drucker, Filament und Ausrüstungsbewertungen. Detaillierte Testergebnisse und Vergleiche.",
    heroTitle: "Bewertungen",
    heroDesc: "3D-Drucker, Filament und Ausrüstungsbewertungen",
    reviewCount: "Bewertungen",
    detailedReview: "Detaillierte Bewertung",
    errorLoading: "Beim Laden des Inhalts ist ein Fehler aufgetreten.",
    noReviewsTitle: "Noch keine Bewertungen",
    noReviewsDesc: "In dieser Kategorie gibt es noch keine Inhalte. Detaillierte Bewertungen kommen bald!",
    backToHome: "Zurück zur Startseite",
    loading: "Laden...",
    noMorePosts: "Alle Bewertungen geladen"
  }
};

const t = translations[lang];

// Helper: Dile göre başlık ve özet al
function getTitle(post: Post): string {
  if (lang === 'en' && post.title_en) return post.title_en;
  if (lang === 'de' && post.title_de) return post.title_de;
  return post.title_tr || post.title;
}

function getSummary(post: Post): string {
  if (lang === 'en' && post.summary_en) return post.summary_en;
  if (lang === 'de' && post.summary_de) return post.summary_de;
  return post.summary_tr || post.summary;
}

const POSTS_PER_PAGE = 12;

let posts: Post[] = [];
let pagination: Pagination | null = null;
let error: string | null = null;

try {
  const apiUrl = lang === 'tr'
    ? `${API_BASE}/api/posts?category=incelemeler&page=1&limit=${POSTS_PER_PAGE}`
    : `${API_BASE}/api/posts?category=incelemeler&page=1&limit=${POSTS_PER_PAGE}&lang=${lang}`;

  const res = await fetch(apiUrl, { headers: { "Accept": "application/json" } });

  if (!res.ok) {
    throw new Error(`API error: ${res.status}`);
  }

  const data: ApiResponse = await res.json();
  posts = data.posts;
  pagination = data.pagination;
} catch (e) {
  error = e instanceof Error ? e.message : "Unknown error";
  console.error("Reviews page error:", error);
}

const pageTitle = t.pageTitle;
const description = posts.length > 0
  ? `${t.pageDesc} ${posts.slice(0, 3).map((p) => getTitle(p)).join(", ")}`
  : t.defaultDesc;

// Tarih formatı
const dateLocale = lang === 'tr' ? 'tr-TR' : lang === 'de' ? 'de-DE' : 'en-US';
---

<BaseLayout title={pageTitle} description={description}>
  <Header />

  <main class="category-page">
    <div class="container">
      <div class="page-header">
        <div class="page-title-group">
          <h1>{t.heroTitle}</h1>
          <p class="page-desc">{t.heroDesc}</p>
        </div>
        {pagination && (
          <span class="post-count">{pagination.total} {t.reviewCount}</span>
        )}
      </div>

      {error && (
        <div class="message message-error">
          <p><strong>{t.errorLoading}</strong></p>
          <p class="text-sm">{error}</p>
        </div>
      )}

      {!error && posts.length === 0 && (
        <div class="empty-state">
          <div class="empty-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M9 12h.01M15 12h.01M12 3c7.2 0 9 1.8 9 9s-1.8 9-9 9-9-1.8-9-9 1.8-9 9-9z"/><path d="M8 15c0 0 1.5 2 4 2s4-2 4-2"/></svg>
          </div>
          <h2>{t.noReviewsTitle}</h2>
          <p>{t.noReviewsDesc}</p>
          <a href="/" class="btn btn-primary">{t.backToHome}</a>
        </div>
      )}

      {posts.length > 0 && (
        <div class="posts-grid" id="posts-grid">
          {posts.map((post) => (
            <article class={`post-card ${post.is_featured ? 'featured' : ''}`}>
              {post.image_url && (
                <a href={`/incelemeler/${post.slug}`} class="post-image">
                  <img src={post.image_url} alt={getTitle(post)} loading="lazy" />
                </a>
              )}
              <div class="post-content">
                {post.is_featured === 1 && (
                  <span class="badge badge-review">{t.detailedReview}</span>
                )}
                <h2>
                  <a href={`/incelemeler/${post.slug}`}>{getTitle(post)}</a>
                </h2>
                <p>{getSummary(post)}</p>
                {post.created_at && (
                  <time class="post-date" datetime={post.created_at}>
                    {new Date(post.created_at).toLocaleDateString(dateLocale, {
                      year: "numeric",
                      month: "long",
                      day: "numeric"
                    })}
                  </time>
                )}
              </div>
            </article>
          ))}
        </div>
      )}

      <!-- Infinite Scroll Loading Indicator -->
      <div id="scroll-loader" class="scroll-loader" style="display: none;">
        <div class="loader-spinner"></div>
        <span>{t.loading}</span>
      </div>

      <div id="scroll-end" class="scroll-end" style="display: none;">
        <span>✅ {t.noMorePosts}</span>
      </div>
    </div>
  </main>
</BaseLayout>

<!-- Infinite Scroll Script -->
<script define:vars={{ API_BASE, POSTS_PER_PAGE, lang, totalPages: pagination?.totalPages || 1, detailedReviewText: t.detailedReview }}>
  let currentPage = 1;
  let isLoading = false;
  let allLoaded = currentPage >= totalPages;

  const grid = document.getElementById('posts-grid');
  const loader = document.getElementById('scroll-loader');
  const endMsg = document.getElementById('scroll-end');

  function getLocalizedField(post, field) {
    if (lang === 'en' && post[field + '_en']) return post[field + '_en'];
    if (lang === 'de' && post[field + '_de']) return post[field + '_de'];
    return post[field + '_tr'] || post[field];
  }

  function formatDate(dateStr) {
    const localeMap = { tr: 'tr-TR', en: 'en-US', de: 'de-DE' };
    return new Date(dateStr).toLocaleDateString(localeMap[lang] || 'tr-TR', {
      year: 'numeric', month: 'long', day: 'numeric'
    });
  }

  function createPostCard(post) {
    const title = getLocalizedField(post, 'title');
    const summary = getLocalizedField(post, 'summary');
    const article = document.createElement('article');
    article.className = 'post-card' + (post.is_featured ? ' featured' : '');

    const imgHtml = post.image_url
      ? `<a href="/incelemeler/${post.slug}" class="post-image"><img src="${post.image_url}" alt="${title}" loading="lazy" /></a>`
      : '';

    const badgeHtml = post.is_featured
      ? `<span class="badge badge-review">${detailedReviewText}</span>`
      : '';

    const dateHtml = post.created_at
      ? `<time class="post-date" datetime="${post.created_at}">${formatDate(post.created_at)}</time>`
      : '';

    article.innerHTML = `
      ${imgHtml}
      <div class="post-content">
        ${badgeHtml}
        <h2><a href="/incelemeler/${post.slug}">${title}</a></h2>
        <p>${summary || ''}</p>
        ${dateHtml}
      </div>
    `;

    return article;
  }

  async function loadMorePosts() {
    if (isLoading || allLoaded) return;
    isLoading = true;
    loader.style.display = 'flex';

    try {
      currentPage++;
      const langParam = lang === 'tr' ? '' : `&lang=${lang}`;
      const res = await fetch(`${API_BASE}/api/posts?category=incelemeler&page=${currentPage}&limit=${POSTS_PER_PAGE}${langParam}`, {
        headers: { 'Accept': 'application/json' }
      });

      if (!res.ok) throw new Error('API error');

      const data = await res.json();

      if (data.posts && data.posts.length > 0) {
        data.posts.forEach(post => {
          grid.appendChild(createPostCard(post));
        });
      }

      if (!data.pagination.hasNext) {
        allLoaded = true;
        endMsg.style.display = 'flex';
      }
    } catch (e) {
      console.error('Load more error:', e);
      currentPage--;
    } finally {
      isLoading = false;
      loader.style.display = 'none';
    }
  }

  // Intersection Observer for infinite scroll
  if (!allLoaded && grid) {
    const sentinel = document.createElement('div');
    sentinel.id = 'scroll-sentinel';
    sentinel.style.height = '1px';
    grid.parentElement.insertBefore(sentinel, loader);

    const observer = new IntersectionObserver((entries) => {
      if (entries[0].isIntersecting && !isLoading && !allLoaded) {
        loadMorePosts();
      }
    }, { rootMargin: '400px' });

    observer.observe(sentinel);
  } else if (allLoaded && endMsg) {
    endMsg.style.display = 'flex';
  }
</script>

<style>
  .category-page {
    padding-top: 156px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .page-header {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .page-title-group {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .page-header h1 {
    margin: 0;
  }

  .page-desc {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin: 0;
  }

  .post-count {
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .post-card {
    background: var(--bg-card);
    border: 2px solid #f59e0b;
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .post-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(245, 158, 11, 0.15);
  }

  .post-card.featured {
    border-color: #f59e0b;
    border-width: 2px;
  }

  .post-image {
    display: block;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .post-image img {
    transform: scale(1.05);
  }

  .post-content {
    padding: var(--spacing-lg);
  }

  .badge-review {
    background: #f59e0b;
    color: #000;
    padding: 2px 10px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .post-content h2 {
    font-size: 1.1rem;
    margin: var(--spacing-sm) 0;
    line-height: 1.4;
  }

  .post-content h2 a {
    color: var(--text-main);
    text-decoration: none;
  }

  .post-content h2 a:hover {
    color: #f59e0b;
  }

  .post-content p {
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-date {
    display: block;
    margin-top: var(--spacing-md);
    font-size: 0.8rem;
    color: var(--text-light);
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
  }

  .empty-icon {
    color: var(--text-light);
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
  }

  .empty-state h2 {
    margin-bottom: var(--spacing-sm);
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: var(--spacing-lg);
  }

  /* Infinite Scroll Indicators */
  .scroll-loader {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 32px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .loader-spinner {
    width: 24px; height: 24px;
    border: 3px solid var(--border-soft);
    border-top-color: #f59e0b;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin { to { transform: rotate(360deg); } }

  .scroll-end {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .message-error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 12px;
    padding: 20px;
    text-align: center;
    margin-bottom: 48px;
  }

  @media (max-width: 640px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }

    .page-header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
