---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { getApiBase } from "../../lib/api";

export const prerender = false;

type Post = {
  id: number;
  title_tr: string;
  summary_tr: string;
  slug: string;
  category: string;
  image_url?: string;
  is_featured: number;
  created_at?: string;
};

type Pagination = {
  page: number;
  limit: number;
  total: number;
  totalPages: number;
  hasNext: boolean;
  hasPrev: boolean;
};

type ApiResponse = {
  posts: Post[];
  pagination: Pagination;
};

const API_BASE = getApiBase(Astro.request);

const url = new URL(Astro.request.url);
const currentPage = Math.max(1, parseInt(url.searchParams.get("page") || "1", 10));
const POSTS_PER_PAGE = 12;

let posts: Post[] = [];
let pagination: Pagination | null = null;
let error: string | null = null;

try {
  const res = await fetch(
    `${API_BASE}/api/posts?category=incelemeler&page=${currentPage}&limit=${POSTS_PER_PAGE}`,
    { headers: { "Accept": "application/json" } }
  );

  if (!res.ok) {
    throw new Error(`API hatasƒ±: ${res.status}`);
  }

  const data: ApiResponse = await res.json();
  posts = data.posts;
  pagination = data.pagination;
} catch (e) {
  error = e instanceof Error ? e.message : "Bilinmeyen hata";
  console.error("ƒ∞ncelemeler sayfasƒ± hatasƒ±:", error);
}

const pageTitle = currentPage > 1
  ? `3D Yazƒ±cƒ± ve Ekipman ƒ∞ncelemeleri - Sayfa ${currentPage} | 3D-labX`
  : "3D Yazƒ±cƒ± ve Ekipman ƒ∞ncelemeleri | 3D-labX";

const pageDescription = "3D yazƒ±cƒ±, filament ve ekipman incelemeleri. Ger√ßek test sonu√ßlarƒ±, detaylƒ± analizler ve kar≈üƒ±la≈ütƒ±rmalar.";

const prevUrl = pagination?.hasPrev ? `/incelemeler?page=${currentPage - 1}` : null;
const nextUrl = pagination?.hasNext ? `/incelemeler?page=${currentPage + 1}` : null;

// ƒ∞lk 2 post hero i√ßin
const heroPosts = posts.slice(0, 2);
const gridPosts = posts.slice(2);
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Header />

  <main class="reviews-page">
    <div class="container">
      <!-- Hero Section -->
      <header class="page-hero">
        <div class="hero-content">
          <nav class="breadcrumb">
            <a href="/">Ana Sayfa</a>
            <span>/</span>
            <span class="current">ƒ∞ncelemeler</span>
          </nav>
          <div class="hero-badge">
            <span class="badge-icon">‚≠ê</span>
            <span>Detaylƒ± Testler</span>
          </div>
          <h1>ƒ∞ncelemeler</h1>
          <p class="hero-desc">
            3D yazƒ±cƒ±, filament ve ekipman incelemeleri. Ger√ßek test sonu√ßlarƒ±, detaylƒ± analizler ve kar≈üƒ±la≈ütƒ±rmalar.
          </p>
        </div>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">{pagination?.total || posts.length}</span>
            <span class="stat-label">ƒ∞nceleme</span>
          </div>
          <div class="stat">
            <span class="stat-number">{posts.filter(p => p.is_featured).length}</span>
            <span class="stat-label">√ñne √áƒ±kan</span>
          </div>
        </div>
      </header>

      {error && (
        <div class="message message-error">
          <p><strong>ƒ∞√ßerikler y√ºklenirken bir hata olu≈ütu.</strong></p>
          <p class="text-sm">{error}</p>
        </div>
      )}

      {!error && posts.length === 0 && (
        <div class="empty-state">
          <div class="empty-icon">üì¶</div>
          <h2>Hen√ºz ƒ∞nceleme Yok</h2>
          <p>Bu kategoride hen√ºz i√ßerik bulunmuyor. Yakƒ±nda detaylƒ± incelemeler eklenecek!</p>
          <a href="/" class="btn btn-primary">Ana Sayfaya D√∂n</a>
        </div>
      )}

      {posts.length > 0 && (
        <>
          <!-- Hero Bento Grid - ƒ∞lk 2 post -->
          {heroPosts.length > 0 && (
            <section class="hero-bento">
              {heroPosts[0] && (
                <a href={`/incelemeler/${heroPosts[0].slug}`} class="hero-card hero-main">
                  <div class="hero-image">
                    {heroPosts[0].image_url && <img src={heroPosts[0].image_url} alt={heroPosts[0].title_tr} />}
                    <div class="hero-overlay"></div>
                  </div>
                  <div class="hero-card-content">
                    <span class="featured-badge">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a.53.53 0 0 0 .399.29l5.164.753a.53.53 0 0 1 .294.904l-3.736 3.643a.53.53 0 0 0-.153.469l.882 5.14a.53.53 0 0 1-.77.56l-4.618-2.428a.53.53 0 0 0-.494 0l-4.618 2.428a.53.53 0 0 1-.77-.56l.882-5.14a.53.53 0 0 0-.153-.47L3.356 8.921a.53.53 0 0 1 .294-.904l5.164-.753a.53.53 0 0 0 .4-.29l2.31-4.68z"/></svg>
                      Detaylƒ± ƒ∞nceleme
                    </span>
                    <h2>{heroPosts[0].title_tr}</h2>
                    <p>{heroPosts[0].summary_tr}</p>
                    {heroPosts[0].created_at && (
                      <time class="hero-date">
                        {new Date(heroPosts[0].created_at).toLocaleDateString("tr-TR", {
                          year: "numeric", month: "long", day: "numeric"
                        })}
                      </time>
                    )}
                  </div>
                </a>
              )}
              {heroPosts[1] && (
                <a href={`/incelemeler/${heroPosts[1].slug}`} class="hero-card hero-side">
                  <div class="hero-image">
                    {heroPosts[1].image_url && <img src={heroPosts[1].image_url} alt={heroPosts[1].title_tr} />}
                    <div class="hero-overlay"></div>
                  </div>
                  <div class="hero-card-content">
                    <h2>{heroPosts[1].title_tr}</h2>
                    <p>{heroPosts[1].summary_tr}</p>
                    {heroPosts[1].created_at && (
                      <time class="hero-date">
                        {new Date(heroPosts[1].created_at).toLocaleDateString("tr-TR", {
                          year: "numeric", month: "long", day: "numeric"
                        })}
                      </time>
                    )}
                  </div>
                </a>
              )}
            </section>
          )}

          <!-- Reviews Bento Grid -->
          {gridPosts.length > 0 && (
            <section class="reviews-section">
              <div class="section-header">
                <h2>
                  <span class="section-icon">üìã</span>
                  T√ºm ƒ∞ncelemeler
                </h2>
              </div>
              <div class="reviews-grid">
                {gridPosts.map((post, index) => (
                  <a
                    href={`/incelemeler/${post.slug}`}
                    class={`review-card ${post.is_featured ? 'featured' : ''} ${index === 0 ? 'wide' : ''}`}
                  >
                    {post.image_url && (
                      <div class="review-image">
                        <img src={post.image_url} alt={post.title_tr} loading="lazy" />
                      </div>
                    )}
                    <div class="review-content">
                      {post.is_featured === 1 && (
                        <span class="review-badge">‚≠ê √ñne √áƒ±kan</span>
                      )}
                      <h3>{post.title_tr}</h3>
                      <p>{post.summary_tr}</p>
                      {post.created_at && (
                        <time class="review-date" datetime={post.created_at}>
                          {new Date(post.created_at).toLocaleDateString("tr-TR", {
                            year: "numeric", month: "short", day: "numeric"
                          })}
                        </time>
                      )}
                    </div>
                  </a>
                ))}
              </div>
            </section>
          )}
        </>
      )}

      <!-- Pagination -->
      {pagination && pagination.totalPages > 1 && (
        <nav class="pagination" aria-label="Sayfa navigasyonu">
          <div class="pagination-wrapper">
            <a
              href={prevUrl || "#"}
              class={`pagination-btn ${!prevUrl ? 'disabled' : ''}`}
              aria-disabled={!prevUrl}
            >
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="m15 18-6-6 6-6"/>
              </svg>
              <span>√ñnceki</span>
            </a>

            <div class="pagination-info">
              <span class="current-page">{pagination.page}</span>
              <span class="separator">/</span>
              <span class="total-pages">{pagination.totalPages}</span>
            </div>

            <a
              href={nextUrl || "#"}
              class={`pagination-btn ${!nextUrl ? 'disabled' : ''}`}
              aria-disabled={!nextUrl}
            >
              <span>Sonraki</span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            </a>
          </div>
        </nav>
      )}

      <!-- CTA Section -->
      <section class="cta-section">
        <div class="cta-content">
          <h2>ƒ∞nceleme √ñneriniz mi Var?</h2>
          <p>Test etmemizi istediƒüiniz bir √ºr√ºn varsa bize bildirin.</p>
          <div class="cta-buttons">
            <a href="/iletisim" class="btn btn-primary">√ñneri G√∂nder</a>
            <a href="/topluluk/forum" class="btn btn-outline">Foruma Git</a>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style>
  .reviews-page {
    padding-top: 120px;
    padding-bottom: 64px;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Hero Section */
  .page-hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 40px;
    padding: 40px;
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.1) 0%, rgba(249, 115, 22, 0.08) 100%);
    border: 1px solid var(--border-soft);
    border-radius: 24px;
    margin-bottom: 32px;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 16px;
  }

  .breadcrumb a {
    color: var(--text-muted);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: var(--accent);
  }

  .breadcrumb .current {
    color: var(--text-main);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(168, 85, 247, 0.15);
    border: 1px solid rgba(168, 85, 247, 0.3);
    border-radius: 24px;
    font-size: 0.85rem;
    font-weight: 600;
    color: #A855F7;
    margin-bottom: 16px;
  }

  .badge-icon {
    font-size: 1rem;
  }

  .page-hero h1 {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--text-main);
    margin-bottom: 12px;
  }

  .hero-desc {
    font-size: 1.1rem;
    color: var(--text-muted);
    max-width: 500px;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    flex-direction: column;
    gap: 20px;
    background: var(--bg-card);
    padding: 24px 32px;
    border-radius: 16px;
    border: 1px solid var(--border-soft);
  }

  .stat {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: #A855F7;
    min-width: 50px;
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--text-muted);
    font-weight: 500;
  }

  /* Hero Bento */
  .hero-bento {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 20px;
    margin-bottom: 40px;
  }

  .hero-card {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    text-decoration: none;
    display: block;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .hero-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 20px 50px rgba(168, 85, 247, 0.2);
  }

  .hero-main {
    min-height: 400px;
  }

  .hero-side {
    min-height: 400px;
  }

  .hero-image {
    position: absolute;
    inset: 0;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .hero-card:hover .hero-image img {
    transform: scale(1.05);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.2) 100%);
  }

  .hero-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 28px;
    z-index: 1;
  }

  .featured-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 14px;
    background: linear-gradient(135deg, #A855F7, #8B5CF6);
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 20px;
    margin-bottom: 14px;
    box-shadow: 0 4px 12px rgba(168, 85, 247, 0.4);
  }

  .hero-card-content h2 {
    margin: 0 0 10px;
    font-size: 1.5rem;
    color: white;
    line-height: 1.3;
  }

  .hero-main .hero-card-content h2 {
    font-size: 1.9rem;
  }

  .hero-card-content p {
    margin: 0;
    font-size: 0.95rem;
    color: rgba(255,255,255,0.85);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .hero-date {
    display: block;
    margin-top: 14px;
    font-size: 0.8rem;
    color: rgba(255,255,255,0.6);
  }

  /* Reviews Section */
  .reviews-section {
    margin-bottom: 40px;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid var(--border-soft);
  }

  .section-header h2 {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1.4rem;
    font-weight: 700;
    color: var(--text-main);
    margin: 0;
  }

  .section-icon {
    font-size: 1.3rem;
    background: rgba(168, 85, 247, 0.15);
    padding: 8px;
    border-radius: 10px;
  }

  /* Reviews Grid */
  .reviews-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .review-card {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
  }

  .review-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 40px rgba(168, 85, 247, 0.15);
    border-color: rgba(168, 85, 247, 0.4);
  }

  .review-card.featured {
    border-color: #A855F7;
    border-width: 2px;
  }

  .review-card.wide {
    grid-column: span 2;
  }

  .review-image {
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .review-card.wide .review-image {
    aspect-ratio: 21/9;
  }

  .review-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .review-card:hover .review-image img {
    transform: scale(1.05);
  }

  .review-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .review-badge {
    display: inline-block;
    width: fit-content;
    padding: 4px 12px;
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(139, 92, 246, 0.15));
    color: #A855F7;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 20px;
    margin-bottom: 10px;
  }

  .review-content h3 {
    margin: 0 0 10px;
    font-size: 1.1rem;
    color: var(--text-main);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .review-card.wide .review-content h3 {
    font-size: 1.2rem;
  }

  .review-content p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex: 1;
  }

  .review-date {
    display: block;
    margin-top: 14px;
    font-size: 0.8rem;
    color: var(--text-light);
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    margin-bottom: 48px;
  }

  .pagination-wrapper {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 8px;
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 14px;
  }

  .pagination-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px 20px;
    background: transparent;
    border-radius: 10px;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-main);
    text-decoration: none;
    transition: all 0.2s;
  }

  .pagination-btn:hover:not(.disabled) {
    background: rgba(168, 85, 247, 0.1);
    color: #A855F7;
  }

  .pagination-btn.disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .pagination-btn svg {
    width: 18px;
    height: 18px;
  }

  .pagination-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.95rem;
    padding: 0 12px;
  }

  .current-page {
    font-weight: 700;
    color: #A855F7;
  }

  .separator {
    color: var(--text-light);
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(135deg, #A855F7 0%, #8B5CF6 100%);
    border-radius: 20px;
    padding: 48px;
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 12px;
  }

  .cta-content p {
    font-size: 1.1rem;
    opacity: 0.9;
    margin: 0 0 24px;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 16px;
  }

  .cta-buttons .btn {
    padding: 14px 32px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .cta-buttons .btn-primary {
    background: white;
    color: #A855F7;
  }

  .cta-buttons .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.2);
  }

  .cta-buttons .btn-outline {
    background: transparent;
    border: 2px solid white;
    color: white;
  }

  .cta-buttons .btn-outline:hover {
    background: white;
    color: #A855F7;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 80px 20px;
    background: var(--bg-card);
    border-radius: 20px;
    border: 1px solid var(--border-soft);
  }

  .empty-icon {
    font-size: 4rem;
    margin-bottom: 16px;
  }

  .empty-state h2 {
    margin-bottom: 8px;
    color: var(--text-main);
  }

  .empty-state p {
    color: var(--text-muted);
    margin-bottom: 24px;
  }

  .empty-state .btn {
    display: inline-block;
    padding: 12px 28px;
    background: #A855F7;
    color: white;
    border-radius: 10px;
    text-decoration: none;
    font-weight: 600;
  }

  /* Error Message */
  .message-error {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 16px;
    padding: 24px;
    text-align: center;
    margin-bottom: 32px;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-bento {
      grid-template-columns: 1fr;
    }

    .hero-main, .hero-side {
      min-height: 300px;
    }

    .reviews-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .review-card.wide {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .reviews-page {
      padding-top: 100px;
    }

    .page-hero {
      flex-direction: column;
      padding: 28px;
      text-align: center;
    }

    .hero-content {
      order: 1;
    }

    .hero-stats {
      order: 2;
      flex-direction: row;
      justify-content: center;
      width: 100%;
      padding: 20px;
    }

    .stat {
      flex-direction: column;
      text-align: center;
      gap: 4px;
    }

    .stat-number {
      min-width: auto;
      font-size: 1.6rem;
    }

    .page-hero h1 {
      font-size: 1.75rem;
    }

    .hero-desc {
      max-width: none;
    }

    .hero-main, .hero-side {
      min-height: 260px;
    }

    .hero-main .hero-card-content h2 {
      font-size: 1.3rem;
    }

    .reviews-grid {
      grid-template-columns: 1fr;
    }

    .review-card.wide {
      grid-column: span 1;
    }

    .review-card.wide .review-image {
      aspect-ratio: 16/9;
    }

    .cta-section {
      padding: 32px 24px;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>
