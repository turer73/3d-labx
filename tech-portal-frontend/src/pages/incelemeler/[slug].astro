---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import { marked } from "marked";
import { getApiBase, getLanguage, getHreflangUrls, type Language } from "../../lib/api";

export const prerender = false;

const lang = getLanguage(Astro.request);
const API_BASE = getApiBase(Astro.request);
const { slug } = Astro.params;

// Dile g√∂re doƒüru route'a y√∂nlendir (SEO i√ßin √∂nemli)
if (lang === "en") {
  return Astro.redirect(`/reviews/${slug}`, 301);
}
if (lang === "de") {
  return Astro.redirect(`/bewertungen/${slug}`, 301);
}

// √áeviriler
const translations: Record<Language, {
  notFound: string;
  error: string;
  backToReviews: string;
  allReviews: string;
  readTime: string;
  tableOfContents: string;
  share: string;
  relatedPosts: string;
  comments: string;
  loginToComment: string;
  login: string;
  noComments: string;
  beFirstToComment: string;
  loadingComments: string;
  commentsLoadError: string;
  shareThoughts: string;
  send: string;
  sending: string;
  commentSent: string;
  commentError: string;
  connectionError: string;
}> = {
  tr: {
    notFound: "ƒ∞√ßerik Bulunamadƒ±",
    error: "Hata",
    backToReviews: "‚Üê Geri d√∂n",
    allReviews: "T√ºm ƒ∞ncelemeler",
    readTime: "dk okuma",
    tableOfContents: "üìë ƒ∞√ßindekiler",
    share: "üîó Payla≈ü",
    relatedPosts: "üìö ƒ∞lgili Yazƒ±lar",
    comments: "Yorumlar",
    loginToComment: "Yorum yapmak i√ßin giri≈ü yapmalƒ±sƒ±nƒ±z",
    login: "Giri≈ü Yap",
    noComments: "Hen√ºz yorum yok",
    beFirstToComment: "ƒ∞lk yorumu siz yazƒ±n!",
    loadingComments: "Yorumlar y√ºkleniyor...",
    commentsLoadError: "Yorumlar y√ºklenemedi",
    shareThoughts: "D√º≈ü√ºncelerinizi payla≈üƒ±n...",
    send: "G√∂nder",
    sending: "G√∂nderiliyor...",
    commentSent: "Yorumunuz g√∂nderildi!",
    commentError: "Yorum g√∂nderilemedi",
    connectionError: "Baƒülantƒ± hatasƒ±"
  },
  en: {
    notFound: "Content Not Found",
    error: "Error",
    backToReviews: "‚Üê Go back",
    allReviews: "All Reviews",
    readTime: "min read",
    tableOfContents: "üìë Table of Contents",
    share: "üîó Share",
    relatedPosts: "üìö Related Posts",
    comments: "Comments",
    loginToComment: "You must log in to comment",
    login: "Log In",
    noComments: "No comments yet",
    beFirstToComment: "Be the first to comment!",
    loadingComments: "Loading comments...",
    commentsLoadError: "Failed to load comments",
    shareThoughts: "Share your thoughts...",
    send: "Send",
    sending: "Sending...",
    commentSent: "Your comment has been sent!",
    commentError: "Failed to send comment",
    connectionError: "Connection error"
  },
  de: {
    notFound: "Inhalt nicht gefunden",
    error: "Fehler",
    backToReviews: "‚Üê Zur√ºck",
    allReviews: "Alle Bewertungen",
    readTime: "Min. Lesezeit",
    tableOfContents: "üìë Inhaltsverzeichnis",
    share: "üîó Teilen",
    relatedPosts: "üìö Verwandte Beitr√§ge",
    comments: "Kommentare",
    loginToComment: "Sie m√ºssen sich anmelden, um zu kommentieren",
    login: "Anmelden",
    noComments: "Noch keine Kommentare",
    beFirstToComment: "Seien Sie der Erste, der kommentiert!",
    loadingComments: "Kommentare werden geladen...",
    commentsLoadError: "Kommentare konnten nicht geladen werden",
    shareThoughts: "Teilen Sie Ihre Gedanken...",
    send: "Senden",
    sending: "Wird gesendet...",
    commentSent: "Ihr Kommentar wurde gesendet!",
    commentError: "Kommentar konnte nicht gesendet werden",
    connectionError: "Verbindungsfehler"
  }
};

const t = translations[lang];

// Kategori bilgileri (√ßok dilli)
const categoryInfo: Record<string, Record<Language, {name: string}> & {color: string, icon: string}> = {
  "3d-baski": { tr: { name: "3D Baskƒ±" }, en: { name: "3D Printing" }, de: { name: "3D-Druck" }, color: "#22c55e", icon: "üñ®Ô∏è" },
  "rehberler": { tr: { name: "Rehber" }, en: { name: "Guide" }, de: { name: "Anleitung" }, color: "#06b6d4", icon: "üìö" },
  "incelemeler": { tr: { name: "ƒ∞nceleme" }, en: { name: "Review" }, de: { name: "Bewertung" }, color: "#f59e0b", icon: "‚≠ê" },
  "sorun-cozumleri": { tr: { name: "Sorun √á√∂z√ºm√º" }, en: { name: "Troubleshooting" }, de: { name: "Fehlerbehebung" }, color: "#ef4444", icon: "üîß" },
};

const defaultCatInfo = { tr: { name: "Makale" }, en: { name: "Article" }, de: { name: "Artikel" }, color: "#3b82f6", icon: "üìÑ" };

let post: any = null;
let relatedPosts: any[] = [];
let fetchError = "";

try {
  // Ana makaleyi √ßek
  const apiUrl = lang === 'tr'
    ? `${API_BASE}/api/post/${slug}`
    : `${API_BASE}/api/post/${slug}?lang=${lang}`;
  const res = await fetch(apiUrl);
  if (res.ok) {
    post = await res.json();
  }

  // ƒ∞lgili yazƒ±larƒ± √ßek (aynƒ± kategori)
  if (post) {
    const relatedApiUrl = lang === 'tr'
      ? `${API_BASE}/api/posts?category=${post.category}&limit=4`
      : `${API_BASE}/api/posts?category=${post.category}&limit=4&lang=${lang}`;
    const relatedRes = await fetch(relatedApiUrl);
    if (relatedRes.ok) {
      const relatedData = await relatedRes.json();
      // API { posts: [...], pagination: {...} } yapƒ±sƒ±nda d√∂n√ºyor
      const allRelated = relatedData.posts || [];
      // Mevcut makaleyi √ßƒ±kar
      relatedPosts = allRelated.filter((p: any) => p.slug !== slug).slice(0, 3);
    }
  }
} catch (e: any) {
  fetchError = e?.message || "Fetch error";
}

// Dile g√∂re ba≈ülƒ±k ve i√ßerik al
function getTitle(p: any): string {
  if (lang === 'en' && p.title_en) return p.title_en;
  if (lang === 'de' && p.title_de) return p.title_de;
  return p.title_tr || p.title;
}

function getSummary(p: any): string {
  if (lang === 'en' && p.summary_en) return p.summary_en;
  if (lang === 'de' && p.summary_de) return p.summary_de;
  return p.summary_tr || p.summary;
}

function getContent(p: any): string {
  if (lang === 'en' && p.content_en) return p.content_en;
  if (lang === 'de' && p.content_de) return p.content_de;
  return p.content_tr || p.content;
}

const title = post ? getTitle(post) : t.notFound;

// Hreflang URL'leri
const hreflangUrls = post ? getHreflangUrls(
  post.category || "incelemeler",
  post.slug_tr || post.slug,
  post.slug_en,
  post.slug_de
) : undefined;

// ƒ∞√ßerik HTML mi yoksa Markdown mƒ± kontrol et
function formatContent(content: string): string {
  if (!content) return "";
  if (content.includes("<p>") || content.includes("<h2>") || content.includes("<div>")) {
    return content;
  }
  if (content.includes("##") || content.includes("**") || content.includes("|")) {
    return marked.parse(content) as string;
  }
  return content
    .split(/\n\n+/)
    .map(p => `<p>${p.replace(/\n/g, "<br/>")}</p>`)
    .join("");
}

// H2 ba≈ülƒ±klarƒ±nƒ± √ßƒ±kar (i√ßindekiler i√ßin)
function extractHeadings(content: string): {id: string, text: string}[] {
  const headings: {id: string, text: string}[] = [];
  const regex = /<h2[^>]*>(.*?)<\/h2>/gi;
  let match;
  while ((match = regex.exec(content)) !== null) {
    const text = match[1].replace(/<[^>]+>/g, ''); // HTML etiketlerini temizle
    const id = text.toLowerCase().replace(/[^a-z0-9ƒü√º≈üƒ±√∂√ß]/gi, '-').replace(/-+/g, '-');
    headings.push({ id, text });
  }
  return headings;
}

// Okuma s√ºresini hesapla
function calculateReadTime(content: string): number {
  const text = content.replace(/<[^>]+>/g, '');
  const words = text.split(/\s+/).length;
  return Math.ceil(words / 200); // 200 kelime/dakika
}

const formattedContent = post ? formatContent(getContent(post)) : "";
const headings = extractHeadings(formattedContent);
const readTime = post ? calculateReadTime(getContent(post) || "") : 0;

// Tarihi formatla (dile g√∂re)
const dateLocale = lang === 'tr' ? 'tr-TR' : lang === 'de' ? 'de-DE' : 'en-US';
const formattedDate = post?.created_at
  ? new Date(post.created_at).toLocaleDateString(dateLocale, { day: "numeric", month: "long", year: "numeric" })
  : "";

// Kategori bilgisini al
const catData = categoryInfo[post?.category] || defaultCatInfo;
const catInfo = {
  name: catData[lang]?.name || catData.tr.name,
  color: catData.color,
  icon: catData.icon
};
---

<BaseLayout title={title} description={post ? getSummary(post) : ''} image={post?.image_url || '/placeholders/incelemeler.svg'} publishedTime={post?.created_at} article={!!post} hreflangUrls={hreflangUrls} lang={lang} category={post?.category || 'incelemeler'}>
  <Header />

  {fetchError && (
    <main class="error-page">
      <p style="color: red;">{t.error}: {fetchError}</p>
      <a href="/incelemeler">{t.backToReviews}</a>
    </main>
  )}

  {!post && !fetchError && (
    <main class="error-page">
      <h1>{t.notFound}</h1>
      <a href="/incelemeler">{t.backToReviews}</a>
    </main>
  )}

  {post && (
    <>
      <!-- Hero Section -->
      <section class="article-hero">
        <div class="hero-container">
          <div class="hero-meta">
            <span class="category-badge" style={`background: ${catInfo.color}`}>
              {catInfo.icon} {catInfo.name}
            </span>
            <span class="meta-item">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
              {formattedDate}
            </span>
            <span class="meta-item">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
              {readTime} {t.readTime}
            </span>
            <span class="meta-item author-badge">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="16" height="16"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
              Turer
            </span>
          </div>
          <h1 class="hero-title">{getTitle(post)}</h1>
          <p class="hero-summary">{getSummary(post)}</p>
        </div>
      </section>

      <!-- Main Layout -->
      <div class="article-layout">
        <!-- Article Content -->
        <main class="article-main">
          <div class="article-content" set:html={formattedContent} />

          <!-- Article End CTA -->
          <div class="article-end-cta" id="articleEndCta">
            <div class="cta-icon">üí¨</div>
            <div class="cta-content">
              <h4>Bu inceleme hakkƒ±nda ne d√º≈ü√ºn√ºyorsun?</h4>
              <p>Yorum yap, sorularƒ±nƒ± sor veya kendi deneyimini payla≈ü!</p>
            </div>
            <div class="cta-actions" id="ctaActions">
              <a href="#comments" class="cta-btn scroll-to-comments">Yorum Yaz</a>
              <a href="/auth/kayit" class="cta-btn-secondary" id="ctaJoinBtn">√úye Ol</a>
            </div>
          </div>

          <!-- Yorum B√∂l√ºm√º -->
          <section class="comments-section" id="comments">
            <div class="comments-header">
              <h3>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                {t.comments}
                <span class="comment-count" id="commentCount">(0)</span>
              </h3>
            </div>
            <div class="comment-form-box">
              <div class="comment-login-prompt" id="loginPrompt">
                <p>{t.loginToComment}</p>
                <a href="/auth/giris" class="btn-login">{t.login}</a>
              </div>
              <form class="comment-form" id="commentForm" style="display: none;">
                <div class="form-avatar" id="formAvatar"><span>?</span></div>
                <div class="form-input-wrapper">
                  <textarea id="commentInput" placeholder={t.shareThoughts} rows="3" maxlength="1000"></textarea>
                  <div class="form-actions">
                    <span class="char-count"><span id="charCount">0</span>/1000</span>
                    <button type="submit" class="btn-submit" id="submitComment">
                      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="22" y1="2" x2="11" y2="13"/><polygon points="22 2 15 22 11 13 2 9 22 2"/></svg>
                      {t.send}
                    </button>
                  </div>
                </div>
              </form>
            </div>
            <div class="comments-list" id="commentsList">
              <div class="comments-loading" id="commentsLoading">
                <div class="loading-spinner"></div>
                <span>{t.loadingComments}</span>
              </div>
              <div class="no-comments" id="noComments" style="display: none;">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>
                <p>{t.noComments}</p>
                <span>{t.beFirstToComment}</span>
              </div>
            </div>
          </section>

          <!-- Prev/Next Navigation -->
          {relatedPosts.length > 0 && (
            <nav class="post-nav" aria-label="Post navigation">
              {relatedPosts[0] && (
                <a href={`/incelemeler/${relatedPosts[0].slug}`} class="post-nav-link prev">
                  <span class="post-nav-label">‚Üê √ñnceki</span>
                  <span class="post-nav-title">{getTitle(relatedPosts[0])}</span>
                </a>
              )}
              {relatedPosts[1] && (
                <a href={`/incelemeler/${relatedPosts[1].slug}`} class="post-nav-link next">
                  <span class="post-nav-label">Sonraki ‚Üí</span>
                  <span class="post-nav-title">{getTitle(relatedPosts[1])}</span>
                </a>
              )}
            </nav>
          )}

          <a href="/incelemeler" class="back-link">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            {t.allReviews}
          </a>
        </main>

        <!-- Sidebar -->
        <aside class="sidebar">
          <!-- ƒ∞√ßindekiler -->
          {headings.length > 0 && (
            <div class="sidebar-card">
              <h3 class="sidebar-title">{t.tableOfContents}</h3>
              <ul class="toc-list">
                {headings.map(h => (
                  <li><a href={`#${h.id}`}>{h.text}</a></li>
                ))}
              </ul>
            </div>
          )}

          <!-- Payla≈ü -->
          <div class="sidebar-card">
            <h3 class="sidebar-title">{t.share}</h3>
            <div class="share-buttons">
              <button class="share-btn" id="share-x" title="Share on X">
                <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
              </button>
              <button class="share-btn" id="share-linkedin" title="Share on LinkedIn">
                <svg viewBox="0 0 24 24" fill="currentColor" width="18" height="18"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              </button>
              <button class="share-btn" id="share-copy" title="Copy Link">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" width="18" height="18"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
              </button>
            </div>
          </div>

          <!-- ƒ∞lgili Yazƒ±lar -->
          {relatedPosts.length > 0 && (
            <div class="sidebar-card">
              <h3 class="sidebar-title">{t.relatedPosts}</h3>
              {relatedPosts.map(rp => (
                <a href={`/incelemeler/${rp.slug}`} class="related-post">
                  <div class="related-post-icon">{catInfo.icon}</div>
                  <div>
                    <div class="related-post-title">{getTitle(rp)}</div>
                    <div class="related-post-cat">{catInfo.name}</div>
                  </div>
                </a>
              ))}
            </div>
          )}
        </aside>
      </div>
    </>
  )}
</BaseLayout>

<style>
  .error-page {
    padding-top: 160px;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
    padding: 160px 20px 80px;
  }

  /* Hero Section */
  .article-hero {
    padding: 140px 20px 50px;
    background: linear-gradient(180deg, var(--bg-card) 0%, var(--bg-main) 100%);
    border-bottom: 1px solid var(--border-soft);
  }

  .hero-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .hero-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .category-badge {
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .author-badge {
    color: var(--accent);
    font-weight: 500;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 16px;
    color: var(--text-main);
  }

  .hero-summary {
    font-size: 1.15rem;
    color: var(--text-muted);
    line-height: 1.6;
    max-width: 700px;
  }

  /* Main Layout */
  .article-layout {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 40px;
    max-width: 1100px;
    margin: 0 auto;
    padding: 40px 20px 80px;
  }

  @media (max-width: 900px) {
    .article-layout {
      grid-template-columns: 1fr;
    }
    .sidebar {
      order: -1;
    }
    .hero-title {
      font-size: 1.8rem;
    }
  }

  /* Article Content */
  .article-main {
    min-width: 0;
  }

  .article-content {
    background: var(--bg-card);
    border: 1px solid var(--border-soft);
    border-radius: 16px;
    padding: 36px;
    color: var(--text-main);
    line-height: 1.8;
    font-size: 1.05rem;
  }

  .article-content :global(p) {
    margin-bottom: 18px;
  }

  .article-content :global(h2) {
    font-size: 1.4rem;
    margin-top: 36px;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 2px solid var(--accent);
    color: var(--text-main);
  }

  .article-content :global(h3) {
    font-size: 1.15rem;
    margin-top: 28px;
    margin-bottom: 12px;
    color: var(--text-main);
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 18px;
    padding-left: 24px;
  }

  .article-content :global(li) {
    margin-bottom: 10px;
  }

  .article-content :global(strong),
  .article-content :global(b) {
    color: var(--accent);
    font-weight: 600;
  }

  /* Markdown Tables */
  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 24px 0;
    font-size: 0.95rem;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid var(--border-soft);
  }

  .article-content :global(thead) {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(168, 85, 247, 0.15) 100%);
  }

  .article-content :global(th) {
    padding: 14px 16px;
    text-align: left;
    font-weight: 600;
    color: var(--text-main);
    border-bottom: 2px solid var(--accent);
  }

  .article-content :global(td) {
    padding: 12px 16px;
    border-bottom: 1px solid var(--border-soft);
    color: var(--text-main);
  }

  .article-content :global(tbody tr:nth-child(even)) {
