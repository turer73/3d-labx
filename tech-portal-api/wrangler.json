{
  "$schema": "https://json.schemastore.org/wrangler.json",
  "name": "tech-portal-api",
  "compatibility_date": "2026-01-22",
  "main": "src/index.js",

  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "tech-portal-db",
      "database_id": "f9456434-6c54-43a2-8374-d7695a51626f"
    }
  ],

  "r2_buckets": [
    {
      "binding": "R2_IMAGES",
      "bucket_name": "tech-portal-images"
    }
  ],

  "ai": {
    "binding": "AI"
  },

  "triggers": {
    "crons": ["0 6 * * *", "0 12 * * *", "0 18 * * *", "0 0 * * *"]
  },

  "vars": {
    "ENVIRONMENT": "production"
  },

  "observability": {
    "enabled": true
  }
}
