      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .filter-bar {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
  }

  .filter-label {
    font-weight: 600;
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .filter-chips {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .chip {
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 0.85rem;
    background: var(--bg-soft);
    color: var(--text-main);
    transition: all 0.2s ease;
  }

  .chip:hover {
    background: var(--accent);
    color: white;
  }

  .chip.active {
    background: var(--accent);
    color: white;
  }

  .results-count {
    color: var(--text-muted);
