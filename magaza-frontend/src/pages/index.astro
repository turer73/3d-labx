const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

// URL'den filtreler
const url = new URL(Astro.request.url);
const selectedCategory = url.searchParams.get('category') || '';
const sortBy = url.searchParams.get('sort') || 'newest';
const minPrice = url.searchParams.get('min') || '';
const maxPrice = url.searchParams.get('max') || '';

// √úr√ºnleri API'den √ßek
let products = [];
let error = null;

try {
  const res = await fetch(`${API_URL}/api/products`);
  if (res.ok) {
    const data = await res.json();
    products = data.products || [];
  }
} catch (e) {
  error = '√úr√ºnler y√ºklenirken bir hata olu≈ütu.';
}

// T√ºm kategoriler
const allCategories = [
  { name: 'Lamba', icon: 'üí°', color: '#F59E0B' },
  { name: 'Dekoratif', icon: 'üé®', color: '#8B5CF6' },
  { name: 'Fig√ºr', icon: 'üéÆ', color: '#EF4444' },
  { name: 'Aksesuar', icon: '‚åö', color: '#06B6D4' },
  { name: 'Fonksiyonel', icon: 'üîß', color: '#22C55E' },
  { name: 'Oyuncak', icon: 'üß∏', color: '#EC4899' },
  { name: 'Takƒ±', icon: 'üíç', color: '#F97316' },
  { name: 'Diƒüer', icon: 'üì¶', color: '#64748B' }
];

// Filtreleme
let filteredProducts = [...products];

if (selectedCategory) {
  filteredProducts = filteredProducts.filter(p => p.category === selectedCategory);
}

if (minPrice) {
  filteredProducts = filteredProducts.filter(p => p.price >= parseInt(minPrice));
}

if (maxPrice) {
  filteredProducts = filteredProducts.filter(p => p.price <= parseInt(maxPrice));
}

// Sƒ±ralama
if (sortBy === 'price-low') {
  filteredProducts.sort((a, b) => a.price - b.price);
} else if (sortBy === 'price-high') {
  filteredProducts.sort((a, b) => b.price - a.price);
} else if (sortBy === 'popular') {
  filteredProducts.sort((a, b) => (b.view_count || 0) - (a.view_count || 0));
} else {
  // newest - varsayƒ±lan
  filteredProducts.sort((a, b) => new Date(b.created_at) - new Date(a.created_at));
}

// √úr√ºn sayƒ±larƒ±nƒ± kategorilere g√∂re hesapla
const categoryCounts = {};
products.forEach(p => {
  const cat = p.category || 'Diƒüer';
  categoryCounts[cat] = (categoryCounts[cat] || 0) + 1;
});
