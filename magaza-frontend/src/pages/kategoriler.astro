---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const title = "Kategoriler - 3D-labX Maƒüaza";
const description = "3D baskƒ± √ºr√ºn kategorileri. Lambalar, fig√ºrler, dekoratif objeler ve daha fazlasƒ±.";

const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

// √úr√ºnleri API'den √ßek
let products = [];
try {
  const res = await fetch(`${API_URL}/api/products`);
  if (res.ok) {
    const data = await res.json();
    products = data.products || [];
  }
} catch (e) {
  console.error('Products fetch error:', e);
}

// Kategorileri ve √ºr√ºn sayƒ±larƒ±nƒ± hesapla
const categoryMap = new Map();
products.forEach(p => {
  const cat = p.category || 'Diƒüer';
  categoryMap.set(cat, (categoryMap.get(cat) || 0) + 1);
});

// T√ºm kategoriler (√ºr√ºn olmasa bile g√∂ster)
const allCategories = [
  { name: 'Lamba', icon: 'üí°', color: '#F59E0B', description: 'LED ve dekoratif aydƒ±nlatma √ºr√ºnleri' },
  { name: 'Dekoratif', icon: 'üé®', color: '#8B5CF6', description: 'Ev ve ofis dekorasyon √ºr√ºnleri' },
  { name: 'Fig√ºr', icon: 'üéÆ', color: '#EF4444', description: 'Karakter fig√ºrleri ve koleksiyon par√ßalarƒ±' },
  { name: 'Aksesuar', icon: '‚åö', color: '#06B6D4', description: 'Ki≈üisel aksesuarlar ve takƒ±lar' },
  { name: 'Fonksiyonel', icon: 'üîß', color: '#22C55E', description: 'Pratik ve kullanƒ±≈ülƒ± par√ßalar' },
  { name: 'Oyuncak', icon: 'üß∏', color: '#EC4899', description: '√áocuklar i√ßin oyuncaklar' },
  { name: 'Takƒ±', icon: 'üíç', color: '#F97316', description: 'Y√ºz√ºk, kolye ve bileklikler' },
  { name: 'Diƒüer', icon: 'üì¶', color: '#64748B', description: 'Diƒüer 3D baskƒ± √ºr√ºnleri' }
];

// √úr√ºn sayƒ±larƒ±nƒ± ekle
const categories = allCategories.map(cat => ({
  ...cat,
  count: categoryMap.get(cat.name) || 0
}));
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="categories-page">
    <div class="container">
      <section class="page-hero">
        <h1>Kategoriler</h1>
        <p>3D baskƒ± √ºr√ºnlerini kategorilere g√∂re ke≈üfedin</p>
      </section>

      <div class="categories-grid">
        {categories.map(cat => (
          <a href={`/?category=${encodeURIComponent(cat.name)}`} class="category-card" style={`--cat-color: ${cat.color}`}>
            <div class="cat-icon">{cat.icon}</div>
            <div class="cat-info">
              <h3>{cat.name}</h3>
              <p>{cat.description}</p>
            </div>
            <div class="cat-count">
              <span class="count-number">{cat.count}</span>
              <span class="count-label">√ºr√ºn</span>
            </div>
          </a>
        ))}
      </div>

      <section class="cta-section">
        <div class="cta-content">
          <h2>√úr√ºn√ºn√ºz√º Satƒ±≈üa Sunun</h2>
          <p>3D baskƒ± √ºr√ºnlerinizi toplulukla payla≈üƒ±n ve kazan√ß elde edin.</p>
          <a href="/satici-ol" class="btn btn-primary">Satƒ±cƒ± Ol</a>
        </div>
