    </div>
  </main>

  <Footer />
</BaseLayout>

<style>
  .categories-page {
    padding-top: 90px;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .page-hero {
    text-align: center;
    padding: 40px 0;
  }

  .page-hero h1 {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 12px;
  }

  .page-hero p {
    color: var(--text-muted);
    font-size: 1.1rem;
  }

  /* Categories Grid */
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 60px;
  }

  .category-card {
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 24px;
    background: var(--bg-card);
    border-radius: 16px;
    border: 2px solid var(--border-soft);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-4px);
    border-color: var(--cat-color);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .cat-icon {
    width: 60px;
    height: 60px;
    border-radius: 16px;
    background: color-mix(in srgb, var(--cat-color) 15%, transparent);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    flex-shrink: 0;
  }

  .cat-info {
    flex: 1;
    min-width: 0;
  }

  .cat-info h3 {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-main);
    margin-bottom: 4px;
  }

  .cat-info p {
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.4;
  }

  .cat-count {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8px 12px;
    background: var(--bg-soft);
    border-radius: 10px;
    flex-shrink: 0;
  }

  .count-number {
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--cat-color);
  }

  .count-label {
    font-size: 0.7rem;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  /* CTA */
  .cta-section {
    padding: 50px 40px;
    background: linear-gradient(135deg, var(--accent), #10B981);
    border-radius: 24px;
    text-align: center;
    margin-bottom: 40px;
  }

  .cta-content h2 {
    color: white;
    font-size: 1.8rem;
    margin-bottom: 12px;
  }

  .cta-content p {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 24px;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    background: white;
    color: var(--accent);
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 600px) {
    .category-card {
      flex-direction: column;
      text-align: center;
    }

    .cat-count {
      flex-direction: row;
      gap: 6px;
    }
  }
</style>
