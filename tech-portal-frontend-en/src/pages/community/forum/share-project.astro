---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Header from "../../../components/Header.astro";
import { getApiBase } from "../../../lib/api";

export const prerender = false;

const API_BASE = getApiBase(Astro.request);

// Projeler kategorisinin ID'sini al
let projectCategoryId = 2; // Default: Projeler & Showcase

try {
  const res = await fetch(`${API_BASE}/api/forum/categories`);
  if (res.ok) {
    const data = await res.json();
    const projectCat = data.categories?.find((c: any) => c.slug === 'projeler');
    if (projectCat) projectCategoryId = projectCat.id;
  }
} catch (e) {
  console.error("Kategori y√ºklenemedi:", e);
}
---

<BaseLayout
  title="Proje Paylas - 3D-labX Topluluk"
  description="3D baski projenizi toplulukla paylasin. Gorseller, teknik detaylar ve daha fazlasi."
>
  <Header />

  <main class="project-share-page">
    <div class="container">
      <nav class="breadcrumb">
        <a href="/topluluk">Topluluk</a>
        <span>/</span>
        <a href="/topluluk/projeler">Projeler</a>
        <span>/</span>
        <span>Proje Paylas</span>
      </nav>

      <div class="form-card">
        <div class="form-header">
          <div class="header-icon">üèÜ</div>
          <h1>Projenizi Paylasin</h1>
          <p>3D baski projenizi toplulukla paylasin, ilham verin!</p>
        </div>

        <form id="projectForm" class="project-form">
          <!-- Proje Basligi -->
          <div class="form-group">
            <label for="title">
              <span class="label-icon">üìù</span>
              Proje Basligi
            </label>
            <input
              type="text"
              id="title"
              name="title"
              placeholder="Ornek: 3D Baskili Robot Kol Projesi"
              minlength="5"
              maxlength="200"
              required
            />
            <span class="char-hint"><span id="titleCount">0</span>/200</span>
          </div>

          <!-- Gorsel Yukleme -->
          <div class="form-group">
            <label>
              <span class="label-icon">üì∏</span>
              Proje Gorselleri
              <span class="optional">(Opsiyonel)</span>
            </label>
            <div class="image-upload-area" id="imageUploadArea">
              <div class="upload-placeholder" id="uploadPlaceholder">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
