    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    border: none;
  }

  .btn-secondary {
    background: var(--bg-main);
    color: var(--text-main);
    border: 1px solid var(--border-soft);
  }

  .btn-secondary:hover {
    border-color: var(--text-muted);
  }

  .btn-primary {
    background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
    color: white;
    box-shadow: 0 4px 15px rgba(139, 92, 246, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(139, 92, 246, 0.4);
  }

  .btn-primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .login-notice {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    padding: 40px;
    text-align: center;
    color: var(--text-muted);
  }

  .login-notice svg {
    color: #8B5CF6;
  }

  .login-notice a {
    color: #8B5CF6;
  }

  .hidden {
    display: none !important;
  }

  @media (max-width: 640px) {
    .project-share-page {
      padding-top: 120px;
    }

    .form-card {
      padding: 20px;
    }

    .form-row {
      flex-direction: column;
    }

    .form-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>

<script define:vars={{ projectCategoryId }}>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';
  const R2_PUBLIC_URL = 'https://pub-9142f11355e84e1da1dd96a4c14e4afb.r2.dev';

  let uploadedImages = [];

  function getAuthToken() {
    return localStorage.getItem('authToken');
  }

  // Login kontrolu
  const form = document.getElementById('projectForm');
  const loginNotice = document.getElementById('loginNotice');

  if (!getAuthToken()) {
    if (form) form.classList.add('hidden');
    if (loginNotice) loginNotice.classList.remove('hidden');
  }

  // Karakter sayaclari
  const titleInput = document.getElementById('title');
  const titleCount = document.getElementById('titleCount');
  const contentInput = document.getElementById('content');
  const contentCount = document.getElementById('contentCount');

  titleInput?.addEventListener('input', () => {
    if (titleCount) titleCount.textContent = titleInput.value.length.toString();
  });

  contentInput?.addEventListener('input', () => {
    if (contentCount) contentCount.textContent = contentInput.value.length.toString();
  });

  // Gorsel yukleme
  const imageUploadArea = document.getElementById('imageUploadArea');
  const imageInput = document.getElementById('imageInput');
  const imagePreviews = document.getElementById('imagePreviews');
  const uploadPlaceholder = document.getElementById('uploadPlaceholder');

  imageUploadArea?.addEventListener('click', () => {
    imageInput?.click();
  });

  imageUploadArea?.addEventListener('dragover', (e) => {
    e.preventDefault();
    imageUploadArea.classList.add('dragover');
  });

  imageUploadArea?.addEventListener('dragleave', () => {
    imageUploadArea.classList.remove('dragover');
  });

  imageUploadArea?.addEventListener('drop', (e) => {
    e.preventDefault();
    imageUploadArea.classList.remove('dragover');
    const files = e.dataTransfer?.files;
    if (files) handleFiles(files);
  });

  imageInput?.addEventListener('change', (e) => {
    const files = (e.target as HTMLInputElement).files;
    if (files) handleFiles(files);
  });

  async function handleFiles(files: FileList) {
    for (const file of Array.from(files)) {
      if (!file.type.startsWith('image/')) continue;
      if (file.size > 5 * 1024 * 1024) {
        window.showToast(`${file.name} √ßok b√ºy√ºk (max 5MB)`, 'warning');
        continue;
      }
      if (uploadedImages.length >= 5) {
        window.showToast('En fazla 5 g√∂rsel y√ºkleyebilirsiniz', 'warning');
        break;
      }

      // Preview ekle
      const reader = new FileReader();
      reader.onload = (e) => {
        const preview = document.createElement('div');
        preview.className = 'image-preview';
        preview.innerHTML = `
          <img src="${e.target?.result}" alt="Preview" />
          <button type="button" class="remove-btn">√ó</button>
        `;

        const idx = uploadedImages.length;
        uploadedImages.push({ file, preview: e.target?.result });

        preview.querySelector('.remove-btn')?.addEventListener('click', (ev) => {
          ev.stopPropagation();
          preview.remove();
          uploadedImages = uploadedImages.filter((_, i) => i !== idx);
        });

        imagePreviews?.appendChild(preview);
      };
      reader.readAsDataURL(file);
    }
  }

  // Form gonderme
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const token = getAuthToken();
    if (!token) {
      window.showToast('L√ºtfen <a href="/auth/giris">giri≈ü yapƒ±n</a>', 'warning');
      return;
    }

    const title = (document.getElementById('title') as HTMLInputElement)?.value?.trim();
    const printer = (document.getElementById('printer') as HTMLInputElement)?.value?.trim();
    const filament = (document.getElementById('filament') as HTMLInputElement)?.value?.trim();
    const printTime = (document.getElementById('printTime') as HTMLInputElement)?.value?.trim();
    const layerHeight = (document.getElementById('layerHeight') as HTMLInputElement)?.value?.trim();
    const stlLink = (document.getElementById('stlLink') as HTMLInputElement)?.value?.trim();
    let content = (document.getElementById('content') as HTMLTextAreaElement)?.value?.trim();

    if (!title || title.length < 5) {
      window.showToast('Ba≈ülƒ±k en az 5 karakter olmalƒ±dƒ±r', 'warning');
      return;
    }

    if (!content || content.length < 20) {
      window.showToast('ƒ∞√ßerik en az 20 karakter olmalƒ±dƒ±r', 'warning');
      return;
    }

    const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
    if (submitBtn) {
      submitBtn.disabled = true;
      submitBtn.innerHTML = 'Yukleniyor...';
    }

    try {
      // Gorselleri yukle (varsa)
      let imageUrls = [];
      for (const img of uploadedImages) {
        try {
          const formData = new FormData();
          formData.append('file', img.file);

          const uploadRes = await fetch(`${API_URL}/api/upload`, {
            method: 'POST',
            headers: {
              'Authorization': `Bearer ${token}`
            },
            body: formData
          });

          if (uploadRes.ok) {
            const uploadData = await uploadRes.json();
            if (uploadData.url) {
              imageUrls.push(uploadData.url);
            }
          }
        } catch (uploadErr) {
          console.error('Gorsel yukleme hatasi:', uploadErr);
        }
      }

      // Teknik detaylari icerege ekle
      let technicalSection = '';
      if (printer || filament || printTime || layerHeight || stlLink) {
        technicalSection = '\n\n---\n\n## Teknik Detaylar\n\n';
        if (printer) technicalSection += `- **Yazici:** ${printer}\n`;
        if (filament) technicalSection += `- **Filament:** ${filament}\n`;
        if (printTime) technicalSection += `- **Baski Suresi:** ${printTime}\n`;
        if (layerHeight) technicalSection += `- **Katman Yuksekligi:** ${layerHeight}\n`;
        if (stlLink) technicalSection += `\n**Model Linki:** [STL Dosyasi](${stlLink})\n`;
      }

      // Gorselleri icerege ekle
      let imageSection = '';
      if (imageUrls.length > 0) {
        imageSection = '\n\n---\n\n## Proje Gorselleri\n\n';
        imageUrls.forEach((url, idx) => {
          imageSection += `![Proje Gorseli ${idx + 1}](${url})\n\n`;
        });
      }

      const finalContent = content + technicalSection + imageSection;

      // Forum konusu olustur
      const res = await fetch(`${API_URL}/api/forum/threads`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          category_id: projectCategoryId,
          title,
          content: finalContent
        })
      });

      const data = await res.json();

      if (res.ok && data.slug) {
        window.showToast('Projeniz ba≈üarƒ±yla payla≈üƒ±ldƒ±!', 'success');
        window.location.href = `/topluluk/forum/konu/${data.slug}`;
      } else {
        window.showToast(data.error || 'Bir hata olu≈ütu', 'error');
      }
    } catch (err) {
      console.error('Project create error:', err);
      window.showToast('Bir hata olu≈ütu, l√ºtfen tekrar deneyin', 'error');
    } finally {
      if (submitBtn) {
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 5v14M5 12h14"/></svg> Projeyi Paylas';
      }
    }
  });
</script>
