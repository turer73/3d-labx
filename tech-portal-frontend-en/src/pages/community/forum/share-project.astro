              <div class="image-previews" id="imagePreviews"></div>
            </div>
          </div>

          <!-- Teknik Detaylar -->
          <div class="form-section">
            <h3>
              <span class="section-icon">‚öôÔ∏è</span>
              Teknik Detaylar
              <span class="optional">(Opsiyonel)</span>
            </h3>

            <div class="form-row">
              <div class="form-group half">
                <label for="printer">Yazici Modeli</label>
                <input
                  type="text"
                  id="printer"
                  name="printer"
                  placeholder="Ornek: Ender 3 V2"
                />
              </div>
              <div class="form-group half">
                <label for="filament">Filament</label>
                <input
                  type="text"
                  id="filament"
                  name="filament"
                  placeholder="Ornek: PLA, PETG"
                />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group half">
                <label for="printTime">Baski Suresi</label>
                <input
                  type="text"
                  id="printTime"
                  name="printTime"
                  placeholder="Ornek: 12 saat"
                />
              </div>
              <div class="form-group half">
                <label for="layerHeight">Katman Yuksekligi</label>
                <input
                  type="text"
                  id="layerHeight"
                  name="layerHeight"
                  placeholder="Ornek: 0.2mm"
                />
              </div>
            </div>

            <div class="form-group">
              <label for="stlLink">STL/Model Linki</label>
              <input
                type="url"
                id="stlLink"
                name="stlLink"
                placeholder="Ornek: https://www.thingiverse.com/thing/..."
              />
