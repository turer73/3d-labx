<script>
  const API_URL = 'https://tech-portal-api.turgut-d01.workers.dev';

  let printers: string[] = [];

  function getAuthToken() {
    return localStorage.getItem('authToken');
  }

  // Login kontrol√º
  const form = document.getElementById('profileForm') as HTMLFormElement;
  const loginNotice = document.getElementById('loginNotice');
  const existingProfile = document.getElementById('existingProfile');
  const deleteSection = document.getElementById('deleteSection');
  const submitBtn = document.getElementById('submitBtn');

  async function loadExistingProfile() {
    const token = getAuthToken();
    if (!token) {
      form?.classList.add('hidden');
      loginNotice?.classList.remove('hidden');
      return;
    }

    try {
      const res = await fetch(`${API_URL}/api/map/profile`, {
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (res.ok) {
        const data = await res.json();
        if (data.profile) {
          // Mevcut profili doldur
          existingProfile?.classList.remove('hidden');
          deleteSection?.classList.remove('hidden');
          if (submitBtn) submitBtn.textContent = 'Profili G√ºncelle';

          const p = data.profile;
          (document.getElementById('city') as HTMLSelectElement).value = p.city || '';
          (document.getElementById('district') as HTMLInputElement).value = p.district || '';
          (document.getElementById('bio') as HTMLTextAreaElement).value = p.bio || '';
          (document.getElementById('offersPrinting') as HTMLInputElement).checked = p.offers_printing === 1;
          (document.getElementById('offersHelp') as HTMLInputElement).checked = p.offers_help === 1;
          (document.getElementById('showEmail') as HTMLInputElement).checked = p.show_email === 1;
          (document.getElementById('termsAccepted') as HTMLInputElement).checked = true;

          // Contact preference
          const contactRadios = document.querySelectorAll('input[name="contactPreference"]');
          contactRadios.forEach((radio: any) => {
            if (radio.value === p.contact_preference) radio.checked = true;
          });

          // Printers
          try {
            printers = JSON.parse(p.printers || '[]');
            renderPrinters();
          } catch {}

          // Specialties
          try {
            const specs = JSON.parse(p.specialties || '[]');
            const checkboxes = document.querySelectorAll('input[name="specialties"]');
            checkboxes.forEach((cb: any) => {
              if (specs.includes(cb.value)) cb.checked = true;
            });
          } catch {}

          updateBioCount();
        }
      }
    } catch (err) {
      console.error('Profile load error:', err);
    }
  }

  loadExistingProfile();

  // Bio karakter sayacƒ±
  const bioInput = document.getElementById('bio') as HTMLTextAreaElement;
  const bioCount = document.getElementById('bioCount');

  function updateBioCount() {
    if (bioCount && bioInput) {
      bioCount.textContent = bioInput.value.length.toString();
    }
  }

  bioInput?.addEventListener('input', updateBioCount);

  // Contact preference -> show email toggle
  const contactRadios = document.querySelectorAll('input[name="contactPreference"]');
  const showEmailGroup = document.getElementById('showEmailGroup');

  contactRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      const value = (e.target as HTMLInputElement).value;
      if (showEmailGroup) {
        showEmailGroup.style.display = (value === 'email' || value === 'both') ? 'block' : 'none';
      }
    });
  });

  // Printers tag input
  const printerInputField = document.getElementById('printerInputField') as HTMLInputElement;
  const printersList = document.getElementById('printersList');

  function renderPrinters() {
    if (!printersList) return;
    printersList.innerHTML = printers.map((p, idx) => `
      <div class="tag-item">
        <span>${p}</span>
        <button type="button" class="tag-remove" data-idx="${idx}">√ó</button>
      </div>
    `).join('');

    printersList.querySelectorAll('.tag-remove').forEach(btn => {
      btn.addEventListener('click', () => {
        const idx = parseInt(btn.getAttribute('data-idx') || '0');
        printers.splice(idx, 1);
        renderPrinters();
      });
    });
  }

  printerInputField?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      e.preventDefault();
      const value = printerInputField.value.trim();
      if (value && !printers.includes(value) && printers.length < 10) {
        printers.push(value);
        renderPrinters();
        printerInputField.value = '';
      }
    }
  });

  // Form submit
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const token = getAuthToken();
    if (!token) {
      (window as any).showToast?.('L√ºtfen giri≈ü yapƒ±n', 'warning');
      return;
    }

    const city = (document.getElementById('city') as HTMLSelectElement)?.value;
    const district = (document.getElementById('district') as HTMLInputElement)?.value?.trim();
    const bio = (document.getElementById('bio') as HTMLTextAreaElement)?.value?.trim();
    const offersPrinting = (document.getElementById('offersPrinting') as HTMLInputElement)?.checked;
    const offersHelp = (document.getElementById('offersHelp') as HTMLInputElement)?.checked;
    const contactPreference = (document.querySelector('input[name="contactPreference"]:checked') as HTMLInputElement)?.value;
    const showEmail = (document.getElementById('showEmail') as HTMLInputElement)?.checked;
    const termsAccepted = (document.getElementById('termsAccepted') as HTMLInputElement)?.checked;

    // Specialties
    const specialtyCheckboxes = document.querySelectorAll('input[name="specialties"]:checked');
    const specialties = Array.from(specialtyCheckboxes).map((cb: any) => cb.value);

    if (!city) {
      (window as any).showToast?.('L√ºtfen il se√ßin', 'warning');
      return;
    }

    if (!termsAccepted) {
      (window as any).showToast?.('L√ºtfen yasal metinleri onaylayƒ±n', 'warning');
      return;
    }

    const btn = submitBtn as HTMLButtonElement;
    if (btn) {
      btn.disabled = true;
      btn.textContent = 'Kaydediliyor...';
    }

    try {
      const res = await fetch(`${API_URL}/api/map/profile`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Authorization': `Bearer ${token}`
        },
        body: JSON.stringify({
          city,
          district,
          printers,
          specialties,
          offers_printing: offersPrinting ? 1 : 0,
          offers_help: offersHelp ? 1 : 0,
          contact_preference: contactPreference,
          show_email: showEmail ? 1 : 0,
          bio,
          terms_accepted: 1
        })
      });

      const data = await res.json();

      if (res.ok) {
        (window as any).showToast?.('Profiliniz kaydedildi!', 'success');
        window.location.href = '/topluluk/harita';
      } else {
        (window as any).showToast?.(data.error || 'Bir hata olu≈ütu', 'error');
      }
    } catch (err) {
      console.error('Profile save error:', err);
      (window as any).showToast?.('Bir hata olu≈ütu', 'error');
    } finally {
      if (btn) {
        btn.disabled = false;
        btn.textContent = 'Haritaya Ekle';
      }
    }
  });

  // Delete profile
  const deleteBtn = document.getElementById('deleteBtn');
  deleteBtn?.addEventListener('click', async () => {
    if (!confirm('Profilinizi haritadan kaldƒ±rmak istediƒüinize emin misiniz?')) return;

    const token = getAuthToken();
    if (!token) return;

    try {
      const res = await fetch(`${API_URL}/api/map/profile`, {
        method: 'DELETE',
        headers: { 'Authorization': `Bearer ${token}` }
      });

      if (res.ok) {
        (window as any).showToast?.('Profiliniz haritadan kaldƒ±rƒ±ldƒ±', 'success');
        window.location.href = '/topluluk/harita';
      }
    } catch (err) {
      console.error('Delete error:', err);
      (window as any).showToast?.('Bir hata olu≈ütu', 'error');
    }
  });
</script>
